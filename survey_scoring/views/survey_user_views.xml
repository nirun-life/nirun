<odoo>
    <record id="survey_user_input_view_form_inherit" model="ir.ui.view">
        <field name="name">survey.user_input.view.form.inherit</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_form" />
        <field name="arch" type="xml">
            <field name="answer_score" position="attributes">
                <attribute name="sum">Total Score</attribute>
            </field>
        </field>
    </record>
    <record id="survey_user_input_view_tree_inherit" model="ir.ui.view">
        <field name="name">survey.user.input.view.tree.inherit</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_tree" />
        <field name="arch" type="xml">
            <field name="quizz_score" position="before">
                <field name="quizz_score_raw" avg="Average Score" optional="show" />
            </field>
            <field name="quizz_score" position="attributes">
                <attribute name="optional">show</attribute>
                <attribute name="avg">Average Score (%)</attribute>
            </field>
        </field>
    </record>
</odoo>
