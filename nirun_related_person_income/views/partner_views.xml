<odoo>
    <record id="partner_view_form_inherit" model="ir.ui.view">
        <field name="name">partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority" eval="1" />
        <field name="arch" type="xml">
            <field name="function" position="after">
                <label attrs="{'invisible': [('type', '!=', 'relate')]}" for="income" />
                <div attrs="{'invisible': [('type', '!=', 'relate')]}" class="o_row">
                    <field name="income" />
                    <span>/</span>
                    <field
                        name="income_uom"
                        attrs="{'required': [('income','&gt;=', 1)]}"
                        options="{'no_open': True, 'no_create': True}"
                    />
                </div>
                <field name="income_currency_id" invisible="True" />
            </field>
            <xpath expr="//notebook/page[1]/field/form/sheet/group/group[1]/field[@name='email']" position="before">
                <label attrs="{'invisible': [('type', '!=', 'relate')]}" for="income" />
                <div attrs="{'invisible': [('type', '!=', 'relate')]}" class="o_row">
                    <field name="income" />
                    <span>/</span>
                    <field
                        name="income_uom"
                        attrs="{'required': [('income','&gt;=', 1)]}"
                        options="{'no_open': True, 'no_create': True}"
                    />
                </div>
                <field name="income_currency_id" invisible="True" />
            </xpath>
        </field>
    </record>
</odoo>
