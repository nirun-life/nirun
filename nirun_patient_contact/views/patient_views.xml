<odoo>
    <record id="patient_view_form_inherit" model="ir.ui.view">
        <field name="name">patient.view.form.inherit</field>
        <field name="model">ni.patient</field>
        <field name="inherit_id" ref="nirun_patient.patient_view_form" />
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="contact" string="Contact">
                    <group>
                        <group>
                            <field
                                name="contact_id"
                                context="{'show_address': True,'default_partner_parent_id': partner_id, 'default_country_id': country_id, 'default_type': 'other'}"
                                domain="[('parent_id', '=', partner_id)]"
                                options='{"always_reload": True}'
                            />
                        </group>
                        <group>
                            <field
                                name="contact_id_2"
                                context="{'show_address': True,'default_partner_parent_id': partner_id, 'default_country_id': country_id, 'default_type': 'other'}"
                                domain="[('parent_id', '=', partner_id)]"
                                options='{"always_reload": True}'
                            />
                        </group>
                    </group>
                    <separator string="Contacts" />
                    <field
                        name="contact_ids"
                        context="{'default_partner_parent_id': partner_id, 'default_country_id': country_id, 'default_user_id': uid, 'default_type': 'other'}"
                        mode="kanban"
                    >
                        <kanban>
                            <field name="id" />
                            <field name="color" />
                            <field name="name" />
                            <field name="title" />
                            <field name="type" />
                            <field name="email" />
                            <field name="parent_id" />
                            <field name="is_company" />
                            <field name="function" />
                            <field name="phone" />
                            <field name="street" />
                            <field name="street2" />
                            <field name="zip" />
                            <field name="city" />
                            <field name="country_id" />
                            <field name="mobile" />
                            <field name="state_id" />
                            <field name="image_128" />
                            <field name="lang" />
                            <!-- fields in form x2many view to diminish requests -->
                            <field name="comment" />
                            <field name="display_name" />
                            <templates>
                                <t t-name="kanban-box">
                                    <t t-set="color" t-value="kanban_color(record.color.raw_value)" />
                                    <div
                                        t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'"
                                    >
                                        <div class="o_kanban_image">
                                            <img
                                                alt=""
                                                t-att-src="kanban_image('res.partner', 'image_128', record.id.raw_value)"
                                                t-if="record.image_128.raw_value"
                                            />
                                            <t t-if="!record.image_128.raw_value">
                                                <img
                                                    alt="Delivery"
                                                    t-att-src='_s + "/base/static/img/truck.png"'
                                                    t-if="record.type.raw_value === 'delivery'"
                                                />
                                                <img
                                                    alt="Invoice"
                                                    t-att-src='_s + "/base/static/img/money.png"'
                                                    t-if="record.type.raw_value === 'invoice'"
                                                />
                                                <t
                                                    t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'"
                                                >
                                                    <img
                                                        alt="Logo"
                                                        t-att-src='_s + "/base/static/img/company_image.png"'
                                                        t-if="record.is_company.raw_value === true"
                                                    />
                                                    <img
                                                        alt="Avatar"
                                                        t-att-src='_s + "/base/static/img/avatar_grey.png"'
                                                        t-if="record.is_company.raw_value === false"
                                                    />
                                                </t>
                                            </t>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <field name="name" />
                                            <div t-if="record.function.raw_value">
                                                <field name="function" />
                                            </div>
                                            <div t-if="record.email.raw_value">
                                                <field name="email" widget="email" />
                                            </div>
                                            <div t-if="record.type.raw_value != 'contact'">
                                                <div>
                                                    <field name="zip" />
                                                    <field name="city" />
                                                </div>
                                                <field name="state_id" t-if="record.state_id.raw_value" />
                                                <field name="country_id" />
                                            </div>
                                            <div t-if="record.phone.raw_value">
                                                Phone:
                                                <field name="phone" widget="phone" />
                                            </div>
                                            <div t-if="record.mobile.raw_value">
                                                Mobile:
                                                <field name="mobile" widget="phone" />
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
