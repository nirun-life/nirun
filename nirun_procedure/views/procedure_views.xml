<odoo>
    <record id="procedure_action" model="ir.actions.act_window">
        <field name="name">Procedures</field>
        <field name="res_model">ni.procedure</field>
        <field name="view_mode">tree,form,graph,pivot</field>
    </record>
    <record id="procedure_action_pivot_from_encounter" model="ir.actions.act_window">
        <field name="name">Procedures</field>
        <field name="res_model">ni.procedure</field>
        <field name="view_mode">pivot,graph</field>
        <field name="domain">[('encounter_id', '=', active_id)]</field>
    </record>
    <record id="procedure_view_search" model="ir.ui.view">
        <field name="name">procedure.view.search</field>
        <field name="model">ni.procedure</field>
        <field name="arch" type="xml">
            <search>
                <field name="patient_id" />
                <filter
                    name="performed_today"
                    string="Today"
                    domain="[
                    ('performed_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                    ('performed_date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))
                    ]"
                />
                <filter
                    name="performed_yesterday"
                    string="Yesterday"
                    domain="[
                    ('performed_date', '&gt;=', (datetime.datetime.now()-datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')),
                    ('performed_date', '&lt;=',(datetime.datetime.now()-datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:23:59'))
                    ]"
                />
                <filter name="performed_date" string="Period" date="performed_date" />
                <separator />
                <group string="Group By">
                    <filter name="group_by_patient" string="Patient" context="{'group_by': 'patient_id'}" />
                    <filter name="group_by_encounter" string="Encounter" context="{'group_by': 'encounter_id'}" />
                    <separator />
                    <filter name="group_by_code" string="Code" context="{'group_by': 'code_id'}" />
                    <filter name="group_by_category" string="Category" context="{'group_by': 'category_id'}" />
                    <filter name="group_by_outcome" string="Outcome" context="{'group_by': 'outcome_id'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="procedure_view_graph" model="ir.ui.view">
        <field name="name">procedure.view.graph</field>
        <field name="model">ni.procedure</field>
        <field name="arch" type="xml">
            <graph stacked="False" type="bar">
                <field name="performed_date" interval="day" />
                <field name="category_id" type="row" />
                <field name="code_id" type="row" />
                <field name="outcome_id" type="measure" />
            </graph>
        </field>
    </record>
    <record id="procedure_view_pivot" model="ir.ui.view">
        <field name="name">procedure.view.pivot</field>
        <field name="model">ni.procedure</field>
        <field name="arch" type="xml">
            <pivot default_order="patient_id, performed_date DESC">
                <field name="performed_date" interval="day" type="col" />
                <field name="patient_id" type="row" />
                <field name="code_id" type="row" />
                <field name="outcome_id" type="measure" />
            </pivot>
        </field>
    </record>
    <record id="procedure_view_tree" model="ir.ui.view">
        <field name="name">procedure.view.tree</field>
        <field name="model">ni.procedure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="performed" />
                <field name="encounter_id" invisible="context.get('default_encounter_id')" />
                <field name="patient_id" invisible="context.get('default_patient_id')" />
                <field name="code_id" optional="show" />
                <field name="category_id" optional="hide" />
                <field name="outcome_id" />
                <field
                    name="company_id"
                    invisible="context.get('default_patient_id')"
                    groups="base.group_multi_company"
                />
            </tree>
        </field>
    </record>
    <record id="procedure_view_form" model="ir.ui.view">
        <field name="name">procedure.view.form</field>
        <field name="model">ni.procedure</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_start"
                        string="Start"
                        class="oe_highlight"
                        states="preparation"
                        type="object"
                    />
                    <button
                        name="action_completed"
                        string="Complete"
                        class="oe_highlight"
                        states="in-progress"
                        type="object"
                    />
                    <button name="action_pause" string="Pause" states="in-progress" type="object" />
                    <button name="action_stop" string="Stop" states="in-progress" type="object" />
                    <field name="state" widget="statusbar" statusbar_visible="preparation,in-progress,completed" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="PDXXXXXXXX" readonly="1" />
                            <field name="patient_id" invisible="context.get('default_patient_id')" />
                            <field name="encounter_id" invisible="context.get('default_encounter_id')" />
                            <field name="performed" />
                            <field name="performed_date" />
                            <field name="location_id" />
                        </group>
                        <group>
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                invisible="context.get('default_patient_id')"
                            />
                            <field name="code_id" />
                            <field name="category_id" />
                            <field name="outcome_id" widget="radio" />
                        </group>
                    </group>
                    <field name="note" placeholder="Note..." />
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
</odoo>
