<odoo>
    <record id="encounter_view_form_inherit" model="ir.ui.view">
        <field name="name">encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_form" />
        <field name="priority">3</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="condition" string="Diagnosis">
                    <field
                        name="condition_ids"
                        class="x-sheet-fill"
                        context="{'default_patient_id': patient_id, 'default_encounter_id': id}"
                        domain="[('category', '=', 'encounter-diagnosis')]"
                        mode="tree"
                    >
                        <tree decoration-success="state in ['remission', 'resolved']">
                            <field name="company_id" invisible="1" />
                            <field name="patient_id" invisible="1" />
                            <field name="encounter_id" invisible="1" />
                            <field name="category" invisible="1" />
                            <field name="code_id" width="5" />
                            <field name="is_problem" />
                            <field name="is_diagnosis" />
                            <field name="classification_id" width="2" optional="show" />
                            <field name="severity" optional="hide" />
                            <field name="period_start" optional="hide" />
                            <field name="period_end" optional="hide" />
                            <field name="state" optional="hide" />
                            <field name="note" optional="hide" />
                            <control>
                                <create string="Add diagnosis" context="{'default_is_diagnosis': True}" />
                                <create string="Add problem" context="{'default_is_problem': True}" />
                                <create
                                    string="Add diagnosis &amp; problem"
                                    context="{'default_is_diagnosis': True, 'default_is_problem': True}"
                                />
                            </control>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="encounter_view_tree_inherit" model="ir.ui.view">
        <field name="name">encounter.view.tree.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_tree" />
        <field name="arch" type="xml">
            <field name="priority" position="after">
                <field name="condition_report_ids" widget="many2many_tags" />
            </field>
        </field>
    </record>
</odoo>
