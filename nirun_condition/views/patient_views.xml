<odoo>
    <record id="patient_view_form_inherit" model="ir.ui.view">
        <field name="name">patient.view.form.inherit</field>
        <field name="model">ni.patient</field>
        <field name="inherit_id" ref="nirun_patient.patient_view_form" />
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="condition" string="Problem List Item">
                    <field
                        name="condition_ids"
                        context="{'default_category': 'problem-list-item', 'default_patient_id': active_id}"
                        domain="[('category', '=', 'problem-list-item')]"
                        mode="tree"
                        nolabel="1"
                    >
                        <tree editable="bottom">
                            <field name="company_id" invisible="1" />
                            <field name="patient_id" invisible="1" />
                            <field name="category" invisible="1" />
                            <field name="code_id" />
                            <field name="severity" />
                            <field name="period_start" />
                            <field name="period_end" optional="show" />
                            <field name="state" />
                            <field name="note" />
                        </tree>
                    </field>
                    <group />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
