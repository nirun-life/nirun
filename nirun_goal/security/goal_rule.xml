<odoo noupdate="1">
    <record id="goal_company_rule" model="ir.rule">
        <field name="name">Goal: multi-company</field>
        <field name="model_id" ref="nirun_goal.model_ni_goal" />
        <field name="global" eval="True" />
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record id="goal_code_user_cwu_rule" model="ir.rule">
        <field name="name">Goal/Code: User create/write own only</field>
        <field name="model_id" ref="nirun_goal.model_ni_goal_code" />
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('nirun_patient.group_user'))]" />
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="0" />
        <field name="perm_create" eval="1" />
    </record>
    <record id="goal_code_user_read_rule" model="ir.rule">
        <field name="name">Goal/Code: User read all</field>
        <field name="model_id" ref="nirun_goal.model_ni_goal_code" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('nirun_patient.group_user'))]" />
        <field name="perm_unlink" eval="0" />
        <field name="perm_write" eval="0" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="0" />
    </record>
</odoo>
