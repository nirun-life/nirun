<odoo>
    <!-- This file only intent use as scaffold for coding model -->
    <record id="goal_achievement_action" model="ir.actions.act_window">
        <field name="name">Achievement</field>
        <field name="res_model">ni.goal.achievement</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="goal_achievement_view_search" model="ir.ui.view">
        <field name="name">goal.achievement.view.search</field>
        <field name="model">ni.goal.achievement</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|' ,('name', 'ilike', self), ('code', 'ilike', self)]" />
                <filter name="inactive" string="Archived" domain="[('active', '=', False)]" />
            </search>
        </field>
    </record>
    <record id="goal_achievement_view_tree" model="ir.ui.view">
        <field name="name">goal.achievement.view.tree</field>
        <field name="model">ni.goal.achievement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="display_name" />
                <field name="code" optional="show" />
                <field name="parent_id" optional="show" />
                <field name="color" optional="hide" />
                <field name="active" optional="hide" />
            </tree>
        </field>
    </record>
    <record id="goal_achievement_view_form" model="ir.ui.view">
        <field name="name">goal.achievement.view.form</field>
        <field name="model">ni.goal.achievement</field>
        <field name="arch" type="xml">
            <form>
                <field name="id" invisible="True" />
                <field name="active" invisible="True" />
                <sheet>
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('active', '=', True)]}"
                        bg_color="bg-danger"
                        title="Archived"
                    />
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="display_name" class="o_task_name text-truncate" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="parent_id" />
                        </group>
                        <group>
                            <field name="code" />
                        </group>
                        <group string="Settings" groups="nirun_careplan.group_manager">
                            <field name="goal_state" widget="radio" />
                            <field name="goal_achieved" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Definition">
                            <field name="definition" />
                        </page>
                        <page string="Extra Info" groups="base.group_no_one">
                            <group>
                                <group>
                                    <field name="color" />
                                    <field name="sequence" />
                                </group>
                                <group>
                                    <field name="create_date" />
                                    <field name="create_uid" />
                                    <field name="write_date" />
                                    <field name="write_uid" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
