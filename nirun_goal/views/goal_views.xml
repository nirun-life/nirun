<odoo>
    <record id="goal_action" model="ir.actions.act_window">
        <field name="name">Goal</field>
        <field name="res_model">ni.goal</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>
    <record id="goal_view_search" model="ir.ui.view">
        <field name="name">careplan.goal.view.search</field>
        <field name="model">ni.goal</field>
        <field name="arch" type="xml">
            <search>
                <field name="code_id" string="Goal" />
                <field
                    name="patient_id"
                    filter_domain="['|' ,('patient_id', 'ilike', self), ('encounter_id', 'ilike', self)]"
                />
                <field name="id" invisible="True" />
                <separator />
                <filter name="achieved" string="Achieved" domain="[('achieved', '=', True)]" />
                <separator />
                <filter name="priority" domain="[('priority', 'in', [1, 2, 3])]" string="Prioritized" />
                <separator />
                <group expand="0" string="Group By">
                    <filter
                        name="group_by_achievement"
                        string="Achievement Status"
                        context="{'group_by': 'achievement_id'}"
                    />
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}" />
                    <separator />
                    <filter name="group_by_priority" string="Priority" context="{'group_by': 'priority'}" />
                    <separator />
                </group>
            </search>
        </field>
    </record>
    <record id="goal_view_form_quick_create" model="ir.ui.view">
        <field name="name">careplan.goal.view.form.quick.create</field>
        <field name="model">ni.goal</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="company_id" invisible="1" />
                    <field
                        name="id"
                        context="{'show_patient': True }"
                        invisible="context.get('default_id', False)"
                        options='{"always_reload": True}'
                    />
                    <field name="code_id" />
                </group>
            </form>
        </field>
    </record>
    <record id="goal_view_kanban" model="ir.ui.view">
        <field name="name">careplan.goal.view.kanban</field>
        <field name="model">ni.goal</field>
        <field name="arch" type="xml">
            <kanban
                class="o_kanban_project_tasks o_kanban_small_column"
                default_group_by="state"
                on_create="quick_create"
                quick_create_view="nirun_careplan.goal_view_form_quick_create"
            >
                <field name="id" />
                <field name="code_id" />
                <field name="description" />
                <field name="patient_id" />
                <field name="priority" />
                <field name="color" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click o_has_icon">
                            <div class="o_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="code_id" />
                                        </strong>
                                        <br />
                                        <small class="text-muted">
                                            <span
                                                class="o-value"
                                                invisible="context.get('default_id', False) or context.get('fsm_mode', False)"
                                            >
                                                <field name="id" />
                                                <field name="patient_id" />
                                            </span>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_dropdown_kanban dropdown" groups="base.group_user" t-if="!selection_mode">
                                    <a
                                        aria-label="Dropdown menu"
                                        class="dropdown-toggle o-no-caret btn"
                                        data-display="static"
                                        data-toggle="dropdown"
                                        href="#"
                                        role="button"
                                        title="Dropdown menu"
                                    >
                                        <span class="fa fa-ellipsis-v" />
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a class="dropdown-item" role="menuitem" t-if="widget.editable" type="edit">
                                            Edit Goal
                                        </a>
                                        <a class="dropdown-item" role="menuitem" t-if="widget.deletable" type="delete">
                                            Delete
                                        </a>
                                        <div class="dropdown-divider" role="separator" />
                                        <ul class="oe_kanban_colorpicker" data-field="color" />
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <small>
                                        <field name="description" />
                                    </small>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left" t-if="!selection_mode">
                                        <field name="priority" widget="priority" />
                                    </div>
                                    <div class="oe_kanban_bottom_right" t-if="!selection_mode" />
                                </div>
                            </div>
                            <div class="oe_clear" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="goal_view_tree" model="ir.ui.view">
        <field name="name">careplan.goal.view.tree</field>
        <field name="model">ni.goal</field>
        <field name="arch" type="xml">
            <tree decoration-success="achieved == True">
                <field name="sequence" invisible="not context.get('seq_visible', False)" widget="handle" />
                <field name="encounter_id" invisible="context.get('default_encounter_id', False)" optional="show" />
                <field name="patient_id" invisible="context.get('default_patient_id', False)" optional="show" />
                <field name="code_id" />
                <field name="term" />
                <field name="description" optional="hide" />
                <field name="achievement_id" />
                <field name="period_start" />
                <field name="period_end" />
                <field name="state" optional="show" />
                <field name="company_id" groups="base.group_multi_company" optional="hide" />
                <field name="achieved" invisible="1" />
                <button
                    name="action_evaluation_wizard"
                    type="object"
                    class="text-primary"
                    string="Evaluate"
                    icon="fa-legal"
                    attrs="{'invisible':[('state', 'in', ['proposed', 'cancelled'])]}"
                />
                <control>
                    <create string="Add Short-Term Goal" context="{'default_term': 'short'}" />
                    <create string="Add Long-Term Goal" context="{'default_term': 'long'}" />
                </control>
            </tree>
        </field>
    </record>
    <record id="goal_view_form" model="ir.ui.view">
        <field name="name">careplan.goal.view.form</field>
        <field name="model">ni.goal</field>
        <field name="arch" type="xml">
            <form class="o_form_project_tasks" string="Goal">
                <field name="achieved" invisible="1" />
                <header>
                    <button
                        name="%(goal_evaluation_wizard_action)d"
                        class="danger"
                        type="action"
                        string="Evaluate"
                        icon="fa-legal"
                        attrs="{'invisible':[('state', 'in', ['proposed', 'cancelled'])]}"
                    />
                    <button
                        name="action_cancel"
                        class="danger"
                        type="object"
                        string="Cancel"
                        attrs="{'invisible':['|', ('id', '=', False), ('state', 'in', ['cancelled','completed'])]}"
                    />
                    <field name="state" statusbar_visible="proposed,active,completed" widget="statusbar" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box" groups="base.group_user" />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('achieved', '!=', True)]}"
                        bg_color="bg-success"
                        title="Achieved"
                    />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': ['|', ('state', '!=', 'completed'), ('achieved', '=', True)]}"
                        bg_color="bg-danger"
                        title="Fail"
                    />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('state', '!=', 'cancelled')]}"
                        bg_color="bg-danger"
                        title="Cancelled"
                    />
                    <div class="oe_title pr-0" style="max-width:85%;">
                        <label for="code_id" class="oe_edit_only" />
                        <h3 class="d-flex flex-row justify-content-between">
                            <field
                                name="code_id"
                                class="o_task_name text-truncate w-100"
                                placeholder="Goal..."
                                options="{'no_open': True}"
                            />
                        </h3>
                        <field name="description" placeholder="Goal description in detail..." />
                    </div>
                    <group>
                        <group>
                            <field
                                name="patient_id"
                                context="{'show_patient': True}"
                                options='{"always_reload": True}'
                                invisible="context.get('default_patient_id')"
                                domain="[('active', '=', True), ('company_id', '=', company_id)]"
                            />
                            <field name="encounter_id" invisible="context.get('default_encounter_id')" />
                            <field
                                name="condition_id"
                                domain="[('patient_id', '=', patient_id), ('encounter_id', '=?', encounter_id)]"
                            />
                            <field name="priority" />
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" />
                            <field name="term" />
                            <label for="period_start" string="Period" />
                            <div class="o_row">
                                <field
                                    name="period_start"
                                    placeholder="Start Date"
                                    widget="daterange"
                                    options="{'related_end_date': 'period_end'}"
                                />
                                <i class="fa fa-fw fa-arrow-right mx-2" aria-label="arrow-icon" title="to" />
                                <field
                                    name="period_end"
                                    placeholder="Due Date"
                                    widget="daterange"
                                    options="{'related_start_date': 'period_start'}"
                                />
                            </div>
                        </group>
                        <group name="achievement" attrs="{'invisible':[('state', 'in', ['proposed', 'cancelled'])]}">
                            <field
                                name="achievement_date"
                                attrs="{'invisible': [('state', 'in', ['proposed', 'active'])]}"
                            />
                            <field name="achievement_id" />
                            <field name="achievement_note" string="" placeholder="Note..." />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="goal_view_pivot" model="ir.ui.view">
        <field name="name">careplan.goal.view.pivot</field>
        <field name="model">ni.goal</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="code_id" type="row" />
                <field name="achievement_id" type="col" />
            </pivot>
        </field>
    </record>
    <record id="goal_view_graph" model="ir.ui.view">
        <field name="name">careplan.activity.view.graph</field>
        <field name="model">ni.goal</field>
        <field name="arch" type="xml">
            <graph>
                <field name="achievement_id" type="col" />
            </graph>
        </field>
    </record>
</odoo>
