<odoo>
    <!-- This file only intent use as scaffold for coding model -->
    <record id="goal_code_action" model="ir.actions.act_window">
        <field name="name">Activity</field>
        <field name="res_model">ni.goal.code</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="goal_code_view_search" model="ir.ui.view">
        <field name="name">goal.code.view.search</field>
        <field name="model">ni.goal.code</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|' ,('name', 'ilike', self), ('code', 'ilike', self)]" />
                <filter name="inactive" string="Archived" domain="[('active', '=', False)]" />
            </search>
        </field>
    </record>
    <record id="goal_code_view_tree" model="ir.ui.view">
        <field name="name">goal.code.view.tree</field>
        <field name="model">ni.goal.code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="code" optional="show" />
                <field name="active" invisible="1" />
            </tree>
        </field>
    </record>
    <record id="goal_code_view_form" model="ir.ui.view">
        <field name="name">goal.code.view.form</field>
        <field name="model">ni.goal.code</field>
        <field name="arch" type="xml">
            <form>
                <field name="id" invisible="True" />
                <field name="active" invisible="True" />
                <sheet>
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('active', '=', True)]}"
                        bg_color="bg-danger"
                        title="Archived"
                    />
                    <group>
                        <field name="name" />
                        <field name="code" groups="base.group_system" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
