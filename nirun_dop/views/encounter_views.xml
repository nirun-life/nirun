<odoo>
    <record id="encounter_view_form_inherit" model="ir.ui.view">
        <field name="name">encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="priority">1000</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_form" />
        <field name="arch" type="xml">
            <!-- They not need stat button -->
            <xpath expr="//div[@name='button_box']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <!-- They need more clear information of record creation -->
            <xpath expr="//sheet/div[@name='company']" position="after">
                <div attrs="{'invisible': [('id', '=', False)]}">
                    <i class="fa fa-user" />
                    <field name="create_uid" class="mx-2" />
                    <field name="create_date" />
                </div>
            </xpath>
        </field>
    </record>
    <record id="encounter_view_search_inherit" model="ir.ui.view">
        <field name="name">encounter.view.search.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='Priority']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
        </field>
    </record>
    <record id="ni_encounter_view_tree_inherit" model="ir.ui.view">
        <field name="name">ni.encounter.view.tree.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_tree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="identification_id" />
            </field>
        </field>
    </record>
    <record id="ni_encounter_view_form_inherit_careplan" model="ir.ui.view">
        <field name="name">ni.encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_careplan.encounter_view_form_inherit" />
        <field name="priority">300</field>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='careplan_ids']/tree" position="attributes">
                <attribute name="editable">top</attribute>
            </xpath>
            <xpath expr="//page/field[@name='careplan_ids']/tree/field[@name='name']" position="before">
                <field name="identifier" optional="hide" />
            </xpath>
            <field name="goal_achieved" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
            <xpath expr="//page/field[@name='careplan_ids']/tree" position="inside">
                <button
                    name="action_edit"
                    attrs="{'column_invisible': [('parent.id', '=', False)], 'invisible': [('id', '=', False)]}"
                    icon="fa-pencil-square-o"
                    type="object"
                />
            </xpath>
        </field>
    </record>
</odoo>
