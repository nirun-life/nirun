<odoo>
    <record id="encounter_view_form_inherit" model="ir.ui.view">
        <field name="name">encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="priority">1000</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='company']" position="after">
                <div attrs="{'invisible': [('id', '=', False)]}">
                    <i class="fa fa-user" />
                    <field name="create_uid" class="mx-2" />
                    <field name="create_date" />
                </div>
            </xpath>
        </field>
    </record>
    <record id="ni_encounter_view_search_inherit" model="ir.ui.view">
        <field name="name">ni.encounter.view.search.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='Priority']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
        </field>
    </record>
</odoo>
