<odoo>
    <record id="patient_view_form_inherit" model="ir.ui.view">
        <field name="name">patient.view.form.inherit</field>
        <field name="model">ni.patient</field>
        <field name="inherit_id" ref="nirun_patient.patient_view_form" />
        <field name="priority">29</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="allergy" string="Allergy / Intolerance">
                    <div attrs="{'invisible': [('allergy_ids', '!=', False)]}">
                        <field name="no_allergy" />
                        <label for="no_allergy" />
                    </div>
                    <field
                        name="allergy_ids"
                        context="{'default_patient_id': id}"
                        mode="tree"
                        attrs="{'invisible': [('no_allergy', '=', True)]}"
                    >
                        <tree editable="bottom">
                            <field name="company_id" invisible="1" />
                            <field name="patient_id" invisible="1" />
                            <field name="code_id" />
                            <field name="criticality" optional="hide" />
                            <field name="state" />
                            <field name="note" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
