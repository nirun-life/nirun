<odoo>
    <record id="survey_view_form_inherit" model="ir.ui.view">
        <field name="name">survey.view.form.inherit</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='grade_ids']/tree" position="inside">
                <field
                    name="condition_code_id"
                    attrs="{'column_invisible': [('parent.subject_type', '!=', 'ni.patient')]}"
                />
                <field
                    name="condition_severity"
                    attrs="{'column_invisible': [('parent.subject_type', '!=', 'ni.patient')]}"
                />
                <field
                    name="condition_state"
                    attrs="{'column_invisible': [('parent.subject_type', '!=', 'ni.patient')], 'required': [('condition_code_id', '!=', False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
