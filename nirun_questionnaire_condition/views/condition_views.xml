<odoo>
    <record id="condition_view_form_inherit" model="ir.ui.view">
        <field name="name">condition.view.form.inherit</field>
        <field name="model">ni.condition</field>
        <field name="inherit_id" ref="nirun_condition.condition_view_form" />
        <field name="priority">5</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="survey" string="Survey">
                    <field
                        name="response_ids"
                        domain="[('patient_id', '=', patient_id), ('survey_id', '=?', survey_id),('state', '=', 'done'),('test_entry', '=', False)]"
                    >
                        <tree default_order="create_date desc" options="{'no_create': True, 'no_create_edit': True}">
                            <field name="create_date" />
                            <field name="create_uid" optional="hide" />
                            <field name="survey_id" width="3" optional="hide" />
                            <field name="quizz_grade_id" />
                            <field name="quizz_score_raw" optional="hide" />
                            <field name="quizz_score" widget="progressbar" optional="show" />
                            <button name="action_print_answers" string="Print" type="object" icon="fa-file-text-o" />
                        </tree>
                    </field>
                    <group>
                        <group>
                            <field name="survey_id" />
                        </group>
                        <group>
                            <field name="response_id" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
