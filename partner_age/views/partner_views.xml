<odoo>
    <record id="res_partner_view_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <field name="title" position="after">
                <!-- <field> for  `display_age` and `age` with class oe_read|edit_only not hide label
                ~ so we separate it to `label > div > field`
                -->
                <label class="oe_read_only" for="display_age" />
                <div class="oe_read_only">
                    <field name="display_age" />
                </div>
                <label attrs="{'invisible': [('birthdate', '!=', False)]}" class="oe_edit_only" for="age" />
                <div class="oe_edit_only">
                    <field name="age" attrs="{'invisible': [('birthdate', '!=', False)]}" />
                </div>
                <field name="birthdate" />
                <field name="deceased_date" />
            </field>
            <field name="active" position="after">
                <!-- invisible fields -->
                <field name="age_init" invisible="1" />
                <field name="age_init_date" invisible="1" />
                <field name="deceased" invisible="1" />
            </field>
        </field>
    </record>
</odoo>
