<odoo>
    <record id="encounter_view_form_inherit" model="ir.ui.view">
        <field name="name">encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_form" />
        <field name="priority">120</field>
        <field name="arch" type="xml">
            <field name="identification_id" position="replace">
                <label for="identification_id" />
                <div class="o_row">
                    <field name="identification_id" attrs="{'invisible': [('identification_id_na', '!=', False)]}" />
                    <span attrs="{'invisible': [('identification_id', '!=', False)]}">
                        <field name="identification_id_na" class="oe_edit_only" />
                        <label class="oe_edit_only" for="identification_id_na" />
                        <label
                            attrs="{'invisible': [('identification_id_na', '!=', True)]}"
                            class="oe_read_only"
                            for="identification_id_na"
                        />
                    </span>
                </div>
            </field>
        </field>
    </record>
</odoo>
