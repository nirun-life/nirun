<odoo>
    <record id="careplan_goal_view_form_inherit" model="ir.ui.view">
        <field name="name">careplan.goal.view.form.inherit</field>
        <field name="model">ni.careplan.goal</field>
        <field name="inherit_id" ref="nirun_careplan.careplan_goal_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_start_survey"
                    class="oe_stat_button"
                    attrs="{'invisible':['|', ('target_survey_id','=',False), ('target_survey_response_id', '!=', False)]}"
                    type="object"
                    context="{'survey_id': target_survey_id}"
                    help="Survey use to evaluate goal"
                    icon="fa-commenting-o"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Start</span>
                        <span class="o_stat_text">Questionnaire</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//group[@name='target']" position="inside">
                <field name="target_survey_id" />
                <field name="target_survey_grade_id" attrs="{'required': [('target_survey_id', '!=', False)]}" />
                <field name="target_survey_score" />
                <field
                    name="target_survey_achieved_status_id"
                    attrs="{'required': [('target_survey_id', '!=', False)]}"
                />
            </xpath>
            <xpath expr="//group[@name='result']" position="inside">
                <field name="target_survey_response_id" />
                <field name="target_survey_grade_id" />
                <field name="target_survey_response_score" />
            </xpath>
        </field>
    </record>
</odoo>
