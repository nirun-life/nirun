<odoo>
    <record id="patient_view_form_inherit" model="ir.ui.view">
        <field name="name">patient.view.form.inherit</field>
        <field name="model">ni.patient</field>
        <field name="inherit_id" ref="nirun_condition.patient_view_form_inherit" />
        <field name="groups_id" eval="[(4, ref('nirun_patient.group_viewer'))]" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='condition']" position="inside">
                <group string="Disability">
                    <field name="disability_ids" widget="many2many_checkboxes" />
                </group>
            </xpath>
        </field>
    </record>
    <record id="patient_view_tree_inherit" model="ir.ui.view">
        <field name="name">patient.view.tree.inherit</field>
        <field name="model">ni.patient</field>
        <field name="inherit_id" ref="nirun_patient.patient_view_tree" />
        <field name="groups_id" eval="[(4, ref('nirun_patient.group_viewer'))]" />
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <field name="disability_display" optional="show" />
            </field>
        </field>
    </record>
</odoo>
