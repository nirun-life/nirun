<odoo>
    <record id="encounter_view_form_inherit" model="ir.ui.view">
        <field name="name">encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_condition.encounter_view_form_inherit" />
        <field name="groups_id" eval="[(4, ref('nirun_patient.group_viewer'))]" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='condition']" position="inside">
                <group string="Disability">
                    <field name="disability_ids" widget="many2many_checkboxes" />
                    <field name="disability_count" invisible="1" />
                    <label for="disability_card" attrs="{'invisible': [('disability_ids', '&lt;=', 0)]}" />
                    <div attrs="{'invisible': [('disability_ids', '&lt;=', 0)]}">
                        <div>
                            <field name="disability_card" widget="boolean_toggle" class="oe_edit_only" />
                            <span attrs="{'invisible': [('disability_card', '=', False)]}">Have</span>
                            <span attrs="{'invisible': [('disability_card', '=', True)]}">Not Have</span>
                        </div>
                        <field
                            name="disability_card_reason"
                            placeholder="Reason why patient not have disability card"
                            attrs="{'invisible': [('disability_card', '=', True)],
                             'required': [('disability_ids', '&gt;=', 1), ('disability_card', '=', False)]}"
                        />
                    </div>
                </group>
            </xpath>
        </field>
    </record>
    <record id="encounter_view_tree_inherit" model="ir.ui.view">
        <field name="name">encounter.view.tree.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_condition.encounter_view_tree_inherit" />
        <field name="groups_id" eval="[(4, ref('nirun_patient.group_viewer'))]" />
        <field name="arch" type="xml">
            <field name="condition_report_ids" position="after">
                <field name="disability_display" optional="show" />
            </field>
        </field>
    </record>
</odoo>
