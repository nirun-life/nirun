<odoo noupdate="1">
    <record id="demographic_manager_cwu_rule" model="ir.rule">
        <field name="name">Demographic: Manager create/write in company</field>
        <field name="model_id" ref="nirun_report.model_ni_report_demographic" />
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('nirun_patient.group_manager'))]" />
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="0" />
        <field name="perm_create" eval="1" />
    </record>
    <record id="demographic_manager_read_rule" model="ir.rule">
        <field name="name">Demographic: Manager read all</field>
        <field name="model_id" ref="nirun_report.model_ni_report_demographic" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('nirun_patient.group_manager'))]" />
        <field name="perm_unlink" eval="0" />
        <field name="perm_write" eval="0" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="0" />
    </record>
    <record id="demographic_topic_company_rule" model="ir.rule">
        <field name="name">Demographic Topic: multi-company</field>
        <field name="model_id" ref="nirun_report.model_ni_report_demographic_code" />
        <field name="domain_force">['|', ('company_ids', '=', False), ('company_ids', 'in', company_ids)]</field>
    </record>
</odoo>
