<odoo>
    <record id="patient_view_form" model="ir.ui.view">
        <field name="name">patient.view.form.inherit.religion</field>
        <field name="model">ni.patient</field>
        <field name="inherit_id" ref="nirun_patient.patient_view_form" />
        <field name="arch" type="xml">
            <field name="function" position="after">
                <label for="income" />
                <div class="o_row">
                    <field name="income" />
                    <span>/</span>
                    <field
                        name="income_uom"
                        attrs="{'required': [('income','&gt;=', 1)]}"
                        options="{'no_open': True, 'no_create': True}"
                    />
                </div>
                <field name="income_currency_id" invisible="True" />
            </field>
        </field>
    </record>
</odoo>
