<odoo>
    <record id="goal_view_form_inherit" model="ir.ui.view">
        <field name="name">goal.view.form.inherit</field>
        <field name="model">ni.goal</field>
        <field name="inherit_id" ref="nirun_goal.goal_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_start_survey"
                    class="oe_stat_button"
                    attrs="{'invisible':['|', ('target_survey_id','=',False), ('target_survey_response_id', '!=', False)]}"
                    type="object"
                    context="{'survey_id': target_survey_id}"
                    help="Survey use to evaluate goal"
                    icon="fa-commenting-o"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Start</span>
                        <span class="o_stat_text">Questionnaire</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//sheet/group/group[2]" position="inside">
                <field name="target_survey_id" attrs="{'invisible': [('target_survey_id', '=', False)]}" />
                <label for="target_survey_grade_id" string="" />
                <div class="o_row" attrs="{'invisible': [('target_survey_id', '=', False)]}">
                    <field
                        name="target_survey_grade_id"
                        placeholder="Grade"
                        attrs="{'required': [('target_survey_id', '!=', False)]}"
                        options="{'no_create': True, 'no_create_edit': True}"
                    />
                    <field name="target_survey_score" class="oe_read_only" />
                    <span class="oe_read_only" attrs="{'invisible': [('target_survey_score', '>', 0)]}">%</span>
                </div>
                <field
                    name="target_survey_achieved_status_id"
                    attrs="{'required': [('target_survey_id', '!=', False)], 'invisible': [('target_survey_id', '=', False)]}"
                />
            </xpath>
            <xpath expr="//group[@name='achievement']" position="inside">
                <field name="target_survey_response_id" attrs="{'invisible': [('target_survey_id', '=', False)]}" />
                <label for="target_survey_response_score" string="" />
                <div class="o_row" attrs="{'invisible': [('target_survey_response_id', '=', False)]}">
                    <field name="target_survey_response_grade_id" />
                    <field name="target_survey_response_score" class="oe_read_only" />
                    <span class="oe_read_only">%</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
