<odoo>
    <template id="report_op_label">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="container">
                            <div class="row">
                                <h2>Medicine Label</h2>
                                <div class="col">
                                    <p>
                                        <strong>ชื่อ:</strong>
                                        <span t-field="o.patient_id" />
                                    </p>
                                </div>
                                <div class="col">
                                    <p>
                                        HN:
                                        <span t-field="o.encounter_id" />
                                    </p>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col">
                                    <h3 t-field="o.medication_id" />
                                </div>
                                <div class="col">
                                    <h3 t-field="o.dosage_id" />
                                </div>
                            </div>
                            <div class="row">
                                <h4 t-field="o.additional_ids" />
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
