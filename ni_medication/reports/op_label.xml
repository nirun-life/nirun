<odoo>
    <record id="paperformat_op_label" model="report.paperformat">
        <field name="name">Medicine Label</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">90</field>
        <field name="page_width">60</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">6</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">5</field>
        <field name="dpi">150</field>
    </record>
    <record id="action_report_op_label" model="ir.actions.report">
        <field name="name">Medicine Label</field>
        <field name="model">ni.medication.dispense</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ni_medication.report_op_label</field>
        <field name="report_file">ni_medication.report_op_label</field>
        <field name="binding_model_id" eval="False" />
        <field name="binding_type">report</field>
    </record>
</odoo>
