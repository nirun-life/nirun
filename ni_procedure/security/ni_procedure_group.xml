<odoo>
    <record id="module_category_medical_procedure" model="ir.module.category">
        <field name="name">Procedure</field>
        <field name="sequence">84</field>
        <field name="parent_id" ref="ni_patient.module_category_medical" />
    </record>
    <record id="group_viewer" model="res.groups">
        <field name="name">Viewer</field>
        <field name="category_id" ref="module_category_medical_procedure" />
        <field name="implied_ids" eval="[(4, ref('ni_patient.group_viewer'))]" />
    </record>
    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_medical_procedure" />
        <field name="implied_ids" eval="[(4, ref('group_viewer'))]" />
    </record>
    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_medical_procedure" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>
</odoo>
