<odoo>
    <record id="encounter_survey_latest_view_form" model="ir.ui.view">
        <field name="name">encounter.survey.latest.view.form</field>
        <field name="model">ni.encounter.survey_latest</field>
        <field name="arch" type="xml">
            <form>
                <field name="deceased" invisible="1" />
                <sheet>
                    <div
                        name="button_box"
                        attrs="{'invisible': [('id', '=', False)]}"
                        class="oe_button_box"
                        groups="nirun_patient.group_user"
                    >
                        <button
                            name="action_print_answers"
                            class="oe_stat_button"
                            icon="fa-print"
                            type="object"
                            string="Print"
                        />
                        <button
                            name="action_graph_view"
                            class="oe_stat_button"
                            icon="fa-bar-chart"
                            type="object"
                            string="See results"
                        />
                        <button
                            name="action_survey_subject_wizard"
                            class="oe_stat_button"
                            icon="fa-commenting"
                            type="object"
                            string="Answer Survey"
                            attrs="{'invisible': [('deceased', '=', True)]}"
                        />
                    </div>
                    <group>
                        <group>
                            <field name="survey_id" />
                            <field name="patient_id" />
                            <field name="encounter_id" />
                        </group>
                        <group>
                            <field name="quizz_score" widget="progressbar" />
                            <field name="quizz_grade_id" />
                        </group>
                        <group>
                            <field name="create_uid" />
                            <field name="create_date" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="encounter_survey_latest_view_tree" model="ir.ui.view">
        <field name="name">encounter.survey.latest.view.tree</field>
        <field name="model">ni.encounter.survey_latest</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="deceased" invisible="1" />
                <field name="patient_id" invisible="context.get('default_patient_id', False)" />
                <field name="encounter_id" invisible="context.get('default_encounter_id', False)" />
                <field name="survey_id" />
                <field name="quizz_grade_id" />
                <field name="quizz_score" widget="progressbar" />
                <field name="create_date" />
                <button name="action_print_answers" string="Print" type="object" icon="fa-print" />
                <button name="action_graph_view" string="See results" type="object" icon="fa-bar-chart" />
                <button
                    name="action_survey_subject_wizard"
                    string="Answer Survey"
                    type="object"
                    icon="fa-commenting"
                    attrs="{'invisible': [('deceased', '=', True)]}"
                />
            </tree>
        </field>
    </record>
    <record id="encounter_view_form_inherit_overview" model="ir.ui.view">
        <field name="name">encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="groups_id" eval="[(4, ref('survey.group_survey_user'))]" />
        <field name="inherit_id" ref="nirun_patient.encounter_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Questionnaire">
                    <field name="response_latest_ids" mode="tree">
                        <tree>
                            <field name="survey_id" />
                            <field name="quizz_grade_id" />
                            <field name="quizz_score" widget="progressbar" />
                            <field name="create_date" />
                            <field name="create_uid" optional="hide" />
                            <button name="action_print_answers" string="Print" type="object" icon="fa-print" />
                            <button name="action_graph_view" string="See results" type="object" icon="fa-bar-chart" />
                            <button
                                name="action_survey_subject_wizard"
                                string="Answer Survey"
                                type="object"
                                icon="fa-commenting"
                                attrs="{'column_invisible': [('parent.state', 'not in', ['in-progress'])]}"
                            />
                        </tree>
                    </field>
                    <button
                        type="object"
                        name="action_survey_user_input_completed"
                        string="See More"
                        context="{'search_default_patient_id': patient_id, 'default_subject_ni_patient': patient_id, 'default_subject_ni_encounter': id}"
                    />
                    <button
                        name="%(survey_action_patient)d"
                        class="btn-primary"
                        type="action"
                        icon="fa-commenting"
                        string="Survey"
                        context="{'default_subject_ni_patient': patient_id, 'default_subject_ni_encounter': id}"
                    />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
