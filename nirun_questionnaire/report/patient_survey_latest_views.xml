<odoo>
    <record id="patient_survey_latest_view_form" model="ir.ui.view">
        <field name="name">patient.survey.latest.view.form</field>
        <field name="model">ni.patient.survey_latest</field>
        <field name="arch" type="xml">
            <form>
                <field name="deceased" invisible="1" />
                <sheet>
                    <div
                        name="button_box"
                        attrs="{'invisible': [('id', '=', False)]}"
                        class="oe_button_box"
                        groups="nirun_patient.group_user"
                    >
                        <button
                            name="action_print_answers"
                            class="oe_stat_button"
                            icon="fa-file-text-o"
                            type="object"
                            string="Print"
                        />
                        <button
                            name="action_graph_view"
                            class="oe_stat_button"
                            icon="fa-bar-chart"
                            type="object"
                            string="See results"
                        />
                        <button
                            name="action_survey_subject_wizard"
                            class="oe_stat_button"
                            icon="fa-commenting"
                            type="object"
                            string="Answer Survey"
                            attrs="{'invisible': [('deceased', '=', True)]}"
                        />
                    </div>
                    <group>
                        <group>
                            <field name="survey_id" />
                            <field name="patient_id" />
                            <field name="encounter_id" />
                        </group>
                        <group>
                            <field name="quizz_score" widget="progressbar" />
                            <field name="quizz_grade_id" />
                        </group>
                        <group>
                            <field name="create_uid" />
                            <field name="create_date" />
                        </group>
                        <group>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="patient_survey_latest_view_tree" model="ir.ui.view">
        <field name="name">patient.survey.latest.view.tree</field>
        <field name="model">ni.patient.survey_latest</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="deceased" invisible="1" />
                <field name="patient_id" invisible="context.get('default_patient_id', False)" />
                <field name="encounter_id" invisible="context.get('default_encounter_id', False)" />
                <field name="survey_id" />
                <field name="quizz_grade_id" />
                <field name="quizz_score" widget="progressbar" />
                <field name="create_date" />
                <button name="action_print_answers" string="Print" type="object" icon="fa-file-text-o" />
                <button name="action_graph_view" string="See results" type="object" icon="fa-bar-chart" />
                <button
                    name="action_survey_subject_wizard"
                    string="Answer Survey"
                    type="object"
                    icon="fa-commenting"
                    attrs="{'invisible': [('deceased', '=', True)]}"
                />
            </tree>
        </field>
    </record>
    <record id="patient_view_form_inherit_overview" model="ir.ui.view">
        <field name="name">patient.view.form.inherit</field>
        <field name="model">ni.patient</field>
        <field name="groups_id" eval="[(4, ref('survey.group_survey_user'))]" />
        <field name="inherit_id" ref="nirun_patient.patient_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='overview']" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="attrs">{'invisible': [('id', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//notebook/page[@name='overview']" position="inside">
                <separator string="Questionnaire" />
                <field name="response_latest_ids" mode="tree">
                    <tree>
                        <field name="survey_id" />
                        <field name="quizz_grade_id" />
                        <field name="quizz_score" widget="progressbar" />
                        <field name="create_date" />
                        <field name="create_uid" optional="hide" />
                        <button name="action_print_answers" string="Print" type="object" icon="fa-file-text-o" />
                        <button name="action_graph_view" string="See results" type="object" icon="fa-bar-chart" />
                        <button
                            name="action_survey_subject_wizard"
                            string="Answer Survey"
                            type="object"
                            icon="fa-commenting"
                            attrs="{'column_invisible': [('parent.deceased', '=', True)]}"
                        />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
