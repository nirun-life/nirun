<odoo>
    <record id="encounter_view_form_inherit" model="ir.ui.view">
        <field name="name">encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="groups_id" eval="[(4, ref('survey.group_survey_user'))]" />
        <field name="inherit_id" ref="nirun_patient.encounter_view_form" />
        <field name="arch" type="xml">
            <field name="reason_ids" position="after">
                <field
                    name="response_latest_id"
                    options="{'no_open': True}"
                    attrs="{'invisible': [('survey_id', '=', False)]}"
                />
                <field name="survey_id" invisible="1" />
                <field name="response_id" invisible="1" />
            </field>
        </field>
    </record>
    <record id="ni_encounter_view_tree_inherit" model="ir.ui.view">
        <field name="name">ni.encounter.view.tree.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_tree" />
        <field name="arch" type="xml">
            <field name="period_start" position="before">
                <field name="response_latest_grade_id" string="Grade" optional="show" />
                <field name="response_latest_date" string="At" optional="show" />
            </field>
        </field>
    </record>
    <record id="encounter_class_view_form_inherit" model="ir.ui.view">
        <field name="name">encounter.class.view.form.inherit</field>
        <field name="model">ni.encounter.cls</field>
        <field name="inherit_id" ref="nirun_patient.encounter_class_view_form" />
        <field name="groups_id" eval="[(4, ref('survey.group_survey_user'))]" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="survey_id" context="{'default_category': 'ni_encounter'}" />
            </field>
        </field>
    </record>
</odoo>
