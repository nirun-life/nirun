<odoo>
    <record id="patient_view_form_inherit" model="ir.ui.view">
        <field name="name">patient.view.form.inherit</field>
        <field name="model">ni.patient</field>
        <field name="groups_id" eval="[(4, ref('survey.group_survey_user'))]" />
        <field name="inherit_id" ref="nirun_patient.patient_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_survey_user_input_completed"
                    class="oe_stat_button"
                    icon="fa-pencil-square-o"
                    type="object"
                >
                    <field name="response_count" string="Answers" widget="statinfo" />
                </button>
            </xpath>
            <xpath expr="//notebook/page[@name='private']" position="before">
                <page name="overview" string="Overview" attrs="{'invisible': [('id', '=', False)]}">
                    <separator string="Questionnaire" />
                    <field
                        name="response_latest_ids"
                        mode="tree"
                        attrs="{'invisible': [('response_latest_ids', '=', False)]}"
                    >
                        <tree>
                            <field name="survey_id" />
                            <field name="quizz_grade_id" />
                            <field name="quizz_score" widget="progressbar" />
                            <field name="create_date" />
                            <button name="action_print_survey" string="Answers" type="object" icon="fa-file-text-o" />
                            <button name="action_graph_view" string="See results" type="object" icon="fa-bar-chart" />
                            <button
                                name="action_survey_subject_wizard"
                                string="Answer Survey"
                                type="object"
                                icon="fa-commenting"
                                attrs="{'column_invisible': [('parent.deceased', '=', True)]}"
                            />
                        </tree>
                        <form>
                            <group>
                                <field name="survey_id" />
                                <field name="quizz_grade_id" />
                                <field name="quizz_score" widget="progressbar" />
                                <field name="partner_id" />
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
