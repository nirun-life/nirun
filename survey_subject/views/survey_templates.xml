<odoo>
    <template id="sfinished_inherit" name="Survey Finished" inherit_id="survey.sfinished">
        <xpath expr="//t/div/div[1]/t" position="after">
            <t t-call="survey_subject.back" t-if="not answer.test_entry" />
        </xpath>
    </template>
    <template id="back" name="Back">
        <div
            class="alert alert-info alert-dismissible rounded-0 mt16 fade show d-print-none css_editable_mode_hidden"
            groups="survey.group_survey_user"
            t-ignore="true"
        >
            <div class="text-center" t-ignore="true">
                <a
                    t-attf-href="/web#view_type=form&amp;model=survey.survey&amp;id=#{survey.id}&amp;action=survey.action_survey_form"
                >
                    <i class="fa fa-fw fa-arrow-right" />
                    Back to Survey.
                </a>
            </div>
            <button aria-label="Close" class="close" data-dismiss="alert" type="button"> &#215; </button>
        </div>
    </template>
</odoo>
