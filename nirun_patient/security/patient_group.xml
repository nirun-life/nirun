<odoo>
    <record id="patient_group_user" model="res.groups">
        <field name="name">Officer</field>
        <field name="users" eval="[(4, ref('base.user_demo'))]" />
        <field
            name="implied_ids"
            eval="[(6, 0, [ref('base.group_private_addresses'), ref('base.group_user'), ref('nirun.group_user')])]"
        />
        <field name="category_id" ref="nirun.module_category_medical_patient" />
    </record>
    <record id="patient_group_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="implied_ids" eval="[(4, ref('patient_group_user'))]" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        <field name="category_id" ref="nirun.module_category_medical_patient" />
    </record>
</odoo>
