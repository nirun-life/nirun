<odoo>
    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">ni.patient</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <record id="patient_view_form" model="ir.ui.view">
        <field name="name">patient.view.form</field>
        <field name="model">ni.patient</field>
        <field name="arch" type="xml">
            <form>
                <field name="id" invisible="1" />
                <sheet>
                    <div name="button_box" class="oe_button_box" groups="base.group_user">
                        <button name="action_encounter" class="oe_stat_button" icon="fa-hospital-o" type="object">
                            <field name="encounter_count" string="Encounter" widget="statinfo" />
                        </button>
                        <button
                            name="action_current_encounter"
                            attrs='{"invisible": [("is_encountering", "=", False)]}'
                            class="oe_stat_button"
                            icon="fa-bed"
                            type="object"
                        >
                            <field name="encountering_start" string="since" widget="statinfo" />
                        </button>
                    </div>
                    <field name="image_1920" class="oe_avatar" options='{"preview_image":"image_128"}' widget='image' />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('deceased', '=', False)]}"
                        bg_color="bg-dark"
                        title="Deceased"
                    />
                    <div class="oe_title">
                        <h1>
                            <div attrs="{'invisible': [('id', '!=', False)]}">New Patient</div>
                            <field
                                name="name"
                                attrs="{'invisible': [('id', '=', False)]}"
                                placeholder="Patient's Name"
                                required="True"
                            />
                        </h1>
                    </div>
                    <div class="oe_read_only">
                        <field name="age" />
                    </div>
                    <field
                        name="category_ids"
                        options="{'color_field': 'color', 'no_create_edit': True}"
                        placeholder="Categories.."
                        widget="many2many_tags"
                    />
                    <group>
                        <group name="partner">
                            <field
                                name="partner_id"
                                context="{'show_address': True, 'default_type': 'contact', 'default_is_company': False, 'default_country_id': country_id}"
                                options='{"always_reload": True}'
                            />
                            <field name="phone" widget="phone" />
                            <field name="mobile" widget="phone" />
                            <field name="email" widget="email" />
                        </group>
                        <group name="internal">
                            <field name="company_id" groups="base.group_multi_company" />
                            <field name="code" placeholder="ex. HN-001204" />
                        </group>
                    </group>
                    <notebook name="notebook">
                        <page name="private" string="Private Information" accesskey="P">
                            <group>
                                <group string="Citizenship">
                                    <field name="country_id" />
                                    <field name="identification_id" placeholder="ex. 1104740100001" />
                                    <field name="gender" options="{'horizontal': True}" widget="radio" />
                                    <field name="birthdate" placeholder="ex. 31/01/1950" />
                                    <label class="oe_edit_only" for="age_years" />
                                    <div class="o_row oe_edit_only">
                                        <field
                                            name="age_years"
                                            attrs="{'readonly': [('deceased_date', '!=', False)]}"
                                        />
                                    </div>
                                </group>
                                <group string="Marital Status">
                                    <field name="marital_status" />
                                </group>
                                <group string="Family">
                                    <field name="father" />
                                    <field name="mother" />
                                    <field name="sibling" />
                                    <field name="birth_order" attrs="{'invisible': [('sibling', '=', 0)]}" />
                                    <field name="children" />
                                </group>
                                <group string="Education">
                                    <field name="education_level" />
                                    <field name="study_field" placeholder="ex. Public Health" />
                                    <field name="study_school" placeholder="ex. Health Science" />
                                </group>
                                <group string="Decease">
                                    <field name="deceased" invisible="1" />
                                    <field name="deceased_date" />
                                </group>
                            </group>
                        </page>
                        <page string="Condition / Problem" accesskey="D">
                            <field name="condition_ids" />
                        </page>
                        <page string="Encounter" groups="nirun.group_manager">
                            <field name="encounter_ids" />
                            <group>
                                <field name="encountering_id" />
                            </group>
                            <field name="is_encountering" invisible="1" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="patient_view_tree" model="ir.ui.view">
        <field name="name">patient.view.tree</field>
        <field name="model">ni.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="gender" />
                <field name="age_years" />
                <field name="birthdate" />
                <field name="phone" optional="show" />
                <field name="mobile" optional="show" />
                <field name="encountering_id" optional="show" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>
    <record id="patient_view_search" model="ir.ui.view">
        <field name="name">patient.view.search</field>
        <field name="model">ni.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="phone" />
                <field name="mobile" />
                <field name="category_ids" />
                <filter name="encountering" string='Currently' domain="[('is_encountering', '=', True)]" />
            </search>
        </field>
    </record>
    <record id="patient_view_kanban" model="ir.ui.view">
        <field name="name">patient.view.kanban</field>
        <field name="model">ni.patient</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="name" />
                <field name="category_ids" />
                <field name="age" />
                <field name="deceased" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                            <field
                                name="image_128"
                                class="o_kanban_image_fill_left"
                                options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"
                                widget="image"
                            />
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <div class="float-right" t-if="record.deceased.raw_value">
                                            <span
                                                name="deceased"
                                                aria-label="Deceased"
                                                class="fa fa-circle"
                                                role="img"
                                                title="Deceased"
                                            />
                                        </div>
                                        <strong class="o_kanban_record_title">
                                            <field name="name" />
                                        </strong>
                                    </div>
                                </div>
                                <field name="category_ids" options="{'color_field': 'color'}" widget="many2many_tags" />
                                <field name="gender" />
                                <div t-if="record.age.value">
                                    <span>
                                        <field name="age_years" />
                                        years
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
