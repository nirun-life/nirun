<odoo>
    <record id="encounter_location_view_tree" model="ir.ui.view">
        <field name="name">encounter.location.view.tree</field>
        <field name="model">ni.encounter.location.rel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="physical_type_id" optional="show" />
                <field name="location_id" />
                <field name="period_start" />
                <field name="period_end" optional="show" />
                <field name="duration_days" optional="hide" />
                <field name="note" optional="show" />
            </tree>
        </field>
    </record>
    <record id="encounter_location_view_form" model="ir.ui.view">
        <field name="name">encounter.location.view.form</field>
        <field name="model">ni.encounter.location.rel</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="location_id" />
                        <field name="physical_type_id" />
                        <field name="company_id" groups="base.group_multi_company" />
                    </group>
                    <group>
                        <label name="period" string="Peroid" for="" />
                        <div class="o_row">
                            <field name="period_start" />
                            <span>-</span>
                            <field name="period_end" />
                        </div>
                        <field name="duration" />
                    </group>
                </group>
                <field name="note" placeholder="Note..." />
            </form>
        </field>
    </record>
</odoo>
