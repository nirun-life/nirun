<odoo>
    <record id="service_request_approve_action" model="ir.actions.server">
        <field name="name">Approve</field>
        <field name="model_id" ref="model_ni_service_request" />
        <field name="binding_model_id" ref="model_ni_service_request" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(6, 0, [ref('nirun_service.group_manager')])]" />
        <field name="code">action = records.action_approve()</field>
    </record>
    <record id="service_request_complete_action" model="ir.actions.server">
        <field name="name">Complete</field>
        <field name="model_id" ref="model_ni_service_request" />
        <field name="binding_model_id" ref="model_ni_service_request" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(6, 0, [ref('nirun_service.group_manager')])]" />
        <field name="code">action = records.action_complete()</field>
    </record>
    <record id="service_request_pause_action" model="ir.actions.server">
        <field name="name">Pause</field>
        <field name="model_id" ref="model_ni_service_request" />
        <field name="binding_model_id" ref="model_ni_service_request" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(6, 0, [ref('nirun_service.group_manager')])]" />
        <field name="code">action = records.action_pause()</field>
    </record>
    <record id="service_request_resume_action" model="ir.actions.server">
        <field name="name">Resume</field>
        <field name="model_id" ref="model_ni_service_request" />
        <field name="binding_model_id" ref="model_ni_service_request" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(6, 0, [ref('nirun_service.group_manager')])]" />
        <field name="code">action = records.action_resume()</field>
    </record>
    <record id="service_request_procedure_action" model="ir.actions.server">
        <field name="name">Procedure</field>
        <field name="model_id" ref="model_ni_service_request" />
        <field name="binding_model_id" ref="model_ni_service_request" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(6, 0, [ref('nirun_service.group_user')])]" />
        <field name="code">action = records.create_procedure()</field>
    </record>
    <record id="service_request_action" model="ir.actions.act_window">
        <field name="name">Service Requests</field>
        <field name="res_model">ni.service.request</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>
    <record id="service_request_action_by_service" model="ir.actions.act_window">
        <field name="name">Service Requests</field>
        <field name="res_model">ni.service.request</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="context">{'search_default_group_by_service': True}</field>
    </record>
    <record id="service_request_view_search" model="ir.ui.view">
        <field name="name">service.request.view.search</field>
        <field name="model">ni.service.request</field>
        <field name="arch" type="xml">
            <search>
                <field
                    name="patient_id"
                    filter_domain="['|', ('patient_id', 'ilike', self), ('encounter_id', 'ilike', self)]"
                />
                <field name="service_id" />
                <filter name="active" string="In-Progress" domain="[('state', '=', 'active')]" />
                <filter name="draft" string="Request" domain="[('state', '=', 'draft')]" />
                <filter name="completed" string="Completed" domain="[('state', '=', 'completed')]" />
                <group name="group_by" string="Group by">
                    <filter name="group_by_patient" string="Patient" context="{'group_by': 'patient_id'}" />
                    <filter name="group_by_encounter" string="Encounter" context="{'group_by': 'encounter_id'}" />
                    <filter name="group_by_service" string="Healthcare Service" context="{'group_by': 'service_id'}" />
                    <separator />
                    <filter name="group_by_intent" string="Intent" context="{'group_by': 'intent'}" />
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="service_request_view_form" model="ir.ui.view">
        <field name="name">service.request.view.form</field>
        <field name="model">ni.service.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_approve"
                        string="Approve"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"
                        class="btn-primary"
                        type="object"
                    />
                    <button
                        name="action_complete"
                        string="Complete"
                        attrs="{'invisible': [('state', '!=', 'active')]}"
                        class="btn-primary"
                        type="object"
                    />
                    <button
                        name="action_pause"
                        string="Pause"
                        attrs="{'invisible': [('state', '!=', 'active')]}"
                        type="object"
                    />
                    <button
                        name="action_resume"
                        string="Resume"
                        attrs="{'invisible': [('state', '!=', 'on-hold')]}"
                        type="object"
                    />
                    <button
                        name="action_revoke"
                        string="Revoke"
                        attrs="{'invisible': [('state', 'not in', ['active', 'on-hold'])]}"
                        type="object"
                    />
                    <field name="state" statusbar_visible="draft,active,completed" widget="statusbar" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box" groups="base.group_user" />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('state', '!=', 'completed')]}"
                        bg_color="bg-success"
                        title="Completed"
                    />
                    <field name="id" invisible="1" />
                    <div class="oe_title" style="max-width:85%;">
                        <label for="service_id" />
                        <h2>
                            <field name="service_id" class="w-100" nolabel="True" placeholder="Healthcare Service" />
                        </h2>
                        <div>
                            <field name="name" attrs="{'invisible': [('id', '=', False)]}" />
                            <span class="fa fa-clock-o ml-2" />
                            <field name="duration" class="mx-1" />
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" invisible="context.get('default_patient_id', False)" />
                            <field
                                name="encounter_id"
                                required="1"
                                invisible="context.get('default_encounter_id', False)"
                                context="{'show_patient': True}"
                            />
                            <label for="period_start" string="Period" />
                            <div class="o_row">
                                <field
                                    name="period_start"
                                    placeholder="Since"
                                    widget="daterange"
                                    required="1"
                                    options="{'related_end_date': 'period_end'}"
                                />
                                <i class="fa fa-fw fa-arrow-right mx-2" aria-label="arrow-icon" title="to" />
                                <field
                                    name="period_end"
                                    placeholder="Until"
                                    widget="daterange"
                                    options="{'related_start_date': 'period_start'}"
                                />
                            </div>
                            <field name="service_available_type" invisible="1" />
                            <field name="service_available_time_ids" invisible="1" />
                            <field
                                name="service_time_id"
                                attrs="{
                            'invisible': [('service_available_type', '!=', 'routine')],
                            'readonly': [('service_available_type', '!=', 'routine')],
                             'required': [('service_available_type', '=', 'routine'), ('service_available_time_ids', '!=', False)]}"
                                widget="radio"
                            />
                            <field name="service_available_timing_ids" invisible="1" />
                            <field
                                name="service_timing_id"
                                attrs="{
                            'invisible': [('service_available_type', '!=', 'event')],
                            'readonly': [('service_available_type', '!=', 'event')],
                             'required': [('service_available_type', '=', 'event'), ('service_available_timing_ids', '!=', False)]}"
                                widget="radio"
                            />
                        </group>
                        <group>
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                invisible="context.get('default_patient_id', False)"
                            />
                            <field name="priority" />
                            <field name="intent" />
                            <field name="requester_id" />
                        </group>
                    </group>
                    <notebook>
                        <page name="procedure" string="Procedure">
                            <div groups="base.group_no_one">
                                <field name="is_procedure" attrs="{'readonly': [('service_id', '!=', False)]}" />
                                <label for="is_procedure" string="Procedure" />
                            </div>
                            <group groups="base.group_no_one">
                                <group attrs="{'invisible': [('is_procedure', '=', False)]}" string="Default Values">
                                    <field
                                        name="procedure_code_id"
                                        string="Code"
                                        attrs="{'readonly': [('service_id', '!=', False)]}"
                                    />
                                    <field
                                        name="procedure_category_id"
                                        string="Category"
                                        attrs="{'readonly': [('service_id', '!=', False)]}"
                                    />
                                    <field
                                        name="procedure_outcome_id"
                                        string="Outcome"
                                        widget="radio"
                                        attrs="{'readonly': [('service_id', '!=', False)]}"
                                    />
                                </group>
                            </group>
                            <field
                                name="procedure_ids"
                                context="{
                                  'default_service_request_id': id,
                                  'default_patient_id': patient_id,
                                  'default_encounter_id': encounter_id,
                                  'default_code_id': procedure_code_id,
                                  'default_category_id': procedure_category_id,
                                  'default_outcome_id': procedure_outcome_id,
                                }"
                                attrs="{'invisible': [('is_procedure', '=', False)], 'readonly': [('state', '!=', 'active')]}"
                            />
                            <button
                                name="create_procedure"
                                class="btn-primary"
                                icon="fa-calendar-check-o"
                                type="object"
                                string="Check-In"
                                attrs="{'invisible': ['|','|', ('id', '=', False), ('is_procedure', '=', False), ('state','!=','active')]}"
                            />
                        </page>
                        <page string="Instruction">
                            <field name="instruction" placeholder="Patient oriented instructions.." />
                        </page>
                        <page string="Extra Info" groups="base.group_no_one">
                            <group>
                                <group attrs="{'invisible': [('state', '=', 'draft')]}">
                                    <field name="approve_date" />
                                    <field name="approve_uid" />
                                </group>
                                <group>
                                    <field name="create_date" />
                                    <field name="create_uid" />
                                    <field name="write_date" />
                                    <field name="write_uid" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="service_request_view_tree" model="ir.ui.view">
        <field name="name">service.request.view.tree</field>
        <field name="model">ni.service.request</field>
        <field name="arch" type="xml">
            <tree
                decoration-bf="state in ['draft','on-hold']"
                decoration-muted="state in ['revoked']"
                decoration-success="state == 'completed'"
                expand="True"
            >
                <field name="id" invisible="1" />
                <field name="patient_id" invisible="context.get('default_patient_id', False)" />
                <field name="encounter_id" invisible="context.get('default_encounter_id', False)" optional="show" />
                <field name="service_id" invisible="context.get('default_service_id', False)" />
                <field
                    name="category_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color', 'limit':3}"
                    optional="show"
                />
                <field name="display_time" />
                <field name="intent" invisible="context.get('search_default_group_by_intent', False)" optional="show" />
                <field name="priority" optional="show" />
                <field name="period_start" optional="hide" />
                <field name="period_end" optional="hide" />
                <field name="duration" optional="show" />
                <field name="procedure_count" optional="show" />
                <field name="procedure_performed" optional="show" />
                <field name="requester_id" optional="hide" />
                <field name="approve_uid" optional="hide" />
                <field name="state" optional="show" />
                <field name="company_id" groups="base.group_multi_company" />
                <button
                    type="object"
                    name="action_approve"
                    icon="fa-play"
                    class="text-primary"
                    invisible="context.get('no_state_control', False)"
                    attrs="{'invisible': ['|', ('id', '=', False), ('state', 'not in', ['draft'])]}"
                />
                <button
                    name="create_procedure"
                    class="text-info"
                    type="object"
                    string="Check-In"
                    icon="fa-calendar-check-o"
                    attrs="{'invisible': [('state', '!=', 'active')]}"
                />
                <button
                    type="object"
                    name="action_complete"
                    icon="fa-check"
                    class="text-success"
                    invisible="context.get('no_state_control', False)"
                    attrs="{'invisible': ['|', ('id', '=', False), ('state', 'not in', ['active', 'on-hold'])]}"
                />
                <button
                    type="object"
                    name="action_revoke"
                    icon="fa-times"
                    class="text-danger"
                    invisible="context.get('no_state_control', False)"
                    attrs="{'invisible': ['|', ('id', '=', False), ('state', 'not in', ['active', 'on-hold'])]}"
                />
            </tree>
        </field>
    </record>
    <record id="service_request_view_pivot" model="ir.ui.view">
        <field name="name">service.request.activity.view.pivot</field>
        <field name="model">ni.service.request</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="service_id" type="row" />
                <field name="priority" type="row" />
                <field name="state" type="col" />
            </pivot>
        </field>
    </record>
    <record id="service_request_view_graph" model="ir.ui.view">
        <field name="name">service.request.view.graph</field>
        <field name="model">ni.service.request</field>
        <field name="arch" type="xml">
            <graph>
                <field name="service_id" type="col" />
                <field name="state" type="col" />
            </graph>
        </field>
    </record>
</odoo>
