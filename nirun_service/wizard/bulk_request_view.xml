<odoo>
    <record id="service_request_bulk_wizard_action" model="ir.actions.act_window">
        <field name="name">Service Request(s)</field>
        <field name="res_model">ni.service.request.bulk</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="service_request_bulk_view_form" model="ir.ui.view">
        <field name="name">service.request.bulk.view.form</field>
        <field name="model">ni.service.request.bulk</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field
                            name="service_id"
                            no_open="True"
                            placeholder="Healthcare Service"
                            readonly="context.get('default_service_id', False)"
                        />
                    </h1>
                    <group col="4">
                        <group colspan="3">
                            <field name="state" options="{'horizontal':True}" widget="radio" />
                            <label for="period_start" string="Period" />
                            <div class="o_row">
                                <field
                                    name="period_start"
                                    placeholder="Since"
                                    widget="daterange"
                                    required="1"
                                    options="{'related_end_date': 'period_end'}"
                                />
                                <i class="fa fa-fw fa-arrow-right mx-2" aria-label="arrow-icon" title="to" />
                                <field
                                    name="period_end"
                                    placeholder="Until"
                                    widget="daterange"
                                    options="{'related_start_date': 'period_start'}"
                                />
                            </div>
                            <field name="service_available_type" invisible="1" />
                            <field name="service_available_time_ids" invisible="1" />
                            <field
                                name="service_time_id"
                                options="{'no_create': True, 'no_create_edit': True, 'no_open':True}"
                                attrs="{
                            'invisible': [('service_available_type', '!=', 'routine')],
                            'readonly': [('service_available_type', '!=', 'routine')],
                             'required': [('service_available_type', '=', 'routine'), ('service_available_time_ids', '!=', False)]}"
                            />
                            <field name="service_available_timing_ids" invisible="1" />
                            <field
                                name="service_timing_id"
                                options="{'no_create': True, 'no_create_edit': True, 'no_open':True}"
                                attrs="{
                            'invisible': [('service_available_type', '!=', 'event')],
                            'readonly': [('service_available_type', '!=', 'event')],
                             'required': [('service_available_type', '=', 'event'), ('service_available_timing_ids', '!=', False)]}"
                            />
                            <field name="patient_ids" options="{'no_create_edit': True}" widget="many2many_tags" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="create_bulk_request" string="Confirm" class="oe_highlight" type="object" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="service_view_form_inherit" model="ir.ui.view">
        <field name="name">service.view.form.inherit</field>
        <field name="model">ni.service</field>
        <field name="inherit_id" ref="nirun_service.service_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="%(service_request_bulk_wizard_action)d"
                    string="Request(s)"
                    context="{'default_service_id': id}"
                    class="btn-primary"
                    type="action"
                />
            </xpath>
        </field>
    </record>
</odoo>
