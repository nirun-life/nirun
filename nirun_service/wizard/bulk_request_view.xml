<odoo>
    <record id="service_request_bulk_wizard_action" model="ir.actions.act_window">
        <field name="name">Service Request(s)</field>
        <field name="res_model">ni.service.request.bulk</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="service_request_bulk_view_form" model="ir.ui.view">
        <field name="name">service.request.bulk.view.form</field>
        <field name="model">ni.service.request.bulk</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field
                            name="service_id"
                            no_open="True"
                            placeholder="Healthcare Service"
                            readonly="context.get('default_service_id', False)"
                        />
                    </h1>
                    <group>
                        <group>
                            <label string="Period" for="period_start" />
                            <div class="o_row">
                                <field name="period_start" placeholder="Since" required="1" />
                                <field name="period_end" placeholder="Until" />
                            </div>
                        </group>
                        <group>
                            <field name="state" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Patients">
                            <field name="patient_ids" mode="kanban" options="{'no_create_edit': True}" />
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="create_bulk_request" string="Confirm" class="oe_highlight" type="object" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="service_view_form_inherit" model="ir.ui.view">
        <field name="name">service.view.form.inherit</field>
        <field name="model">ni.service</field>
        <field name="inherit_id" ref="nirun_service.service_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="%(service_request_bulk_wizard_action)d"
                    string="Request(s)"
                    context="{'default_service_id': active_id}"
                    icon="fa-files-o"
                    type="action"
                />
            </xpath>
        </field>
    </record>
</odoo>
