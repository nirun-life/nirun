<odoo>
    <record id="module_category_medical_service" model="ir.module.category">
        <field name="name">Healthcare Services</field>
        <field name="sequence">86</field>
        <field name="parent_id" ref="nirun.module_category_medical" />
    </record>
    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user'), ref('nirun_patient.group_user')])]" />
        <field name="category_id" ref="module_category_medical_service" />
    </record>
    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        <field name="category_id" ref="module_category_medical_service" />
    </record>
</odoo>
