<odoo>
    <record id="patient_view_form_inherit" model="ir.ui.view">
        <field name="name">patient.view.form.inherit</field>
        <field name="model">ni.patient</field>
        <field name="inherit_id" ref="nirun_patient.patient_view_form" />
        <field name="arch" type="xml">
            <field name="encounter_id" position="after">
                <field name="coverage_plan_id" />
                <field
                    name="coverage_partner_id"
                    context="{'default_is_company': True}"
                    domain="[('is_company', '=', True)]"
                />
            </field>
        </field>
    </record>
    <record id="patient_view_tree_inherit" model="ir.ui.view">
        <field name="name">patient.view.tree.inherit</field>
        <field name="model">ni.patient</field>
        <field name="inherit_id" ref="nirun_coverage.patient_view_tree_inherit" />
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <field name="coverage_plan_id" optional="show" />
                <field name="coverage_partner_id" optional="show" />
            </field>
            <field name="coverage_id" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
        </field>
    </record>
</odoo>
