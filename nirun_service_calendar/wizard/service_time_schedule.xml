<odoo>
    <record id="service_time_schedule_wizard_action" model="ir.actions.act_window">
        <field name="name">Schedule</field>
        <field name="res_model">ni.service.time.schedule</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="service_time_schedule_view_form" model="ir.ui.view">
        <field name="name">service.time.schedule.view.form</field>
        <field name="model">ni.service.time.schedule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field
                            name="service_id"
                            no_open="True"
                            placeholder="Healthcare Service"
                            readonly="context.get('default_service_id', False)"
                        />
                    </h1>
                    <group col="4">
                        <group colspan="3">
                            <field
                                name="time_id"
                                attrs="{'required': [('timing_id', '=', False)]}"
                                context="{'default_service_id':service_id}"
                                options="{'no_create': True, 'no_create_edit': True}"
                            />
                            <field
                                name="timing_id"
                                attrs="{'required': [('time_id', '=', False)]}"
                                context="{'default_service_id':service_id}"
                                options="{'no_create': True, 'no_create_edit': True}"
                            />
                            <label string="Period" for="period_start" />
                            <div class="o_row">
                                <field name="period_start" placeholder="Since" />
                                <i class="fa fa-fw fa-arrow-right mx-2" aria-label="arrow-icon" title="to" />
                                <field name="period_end" placeholder="Until" />
                            </div>
                            <field
                                name="partner_ids"
                                options="{'no_open':True, 'no_create':True, 'no_create_edit': True}"
                                widget="many2many_tags"
                            />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button
                        name="schedule"
                        string="Schedule"
                        class="oe_highlight"
                        icon="fa-calendar-plus-o"
                        type="object"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="service_view_form_inherit_time_schedule" model="ir.ui.view">
        <field name="name">service.view.form.inherit.time.schedule</field>
        <field name="model">ni.service</field>
        <field name="inherit_id" ref="nirun_service.service_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="%(service_time_schedule_wizard_action)d"
                    string="Schedule"
                    context="{'default_service_id': id}"
                    type="action"
                />
            </xpath>
        </field>
    </record>
</odoo>
