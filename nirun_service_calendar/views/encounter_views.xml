<odoo>
    <record id="action_calendar_event_from_encounter" model="ir.actions.act_window">
        <field name="name">Healthcare Services</field>
        <field name="res_model">calendar.event</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="view_id" ref="calendar_event_view_calender" />
        <field name="search_view_id" ref="calendar.view_calendar_event_search" />
        <field name="context">
            {'search_default_service': True, 'search_default_encounter_ids': active_ids, 'mode': 'month'}
        </field>
    </record>
    <record id="ni_encounter_view_form_inherit" model="ir.ui.view">
        <field name="name">ni.encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="%(action_calendar_event_from_encounter)d"
                    class="oe_stat_button"
                    icon="fa-calendar"
                    type="action"
                    context="{'default_encounter_id': id}"
                >
                    <field name="location_history_count" widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
