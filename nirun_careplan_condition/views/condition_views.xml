<odoo>
    <record id="condition_view_form_inherit" model="ir.ui.view">
        <field name="name">condition.view.form.inherit</field>
        <field name="model">ni.condition</field>
        <field name="inherit_id" ref="nirun_condition.condition_view_form" />
        <field name="groups_id" eval="[(4, ref('nirun_careplan.group_user'))]" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="activity" string="Activities">
                    <field name="activity_ids" mode="kanban" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
