<odoo noupdate="1">
    <record id="careplan_company_rule" model="ir.rule">
        <field name="name">Careplan: multi-company</field>
        <field name="model_id" ref="nirun_careplan.model_ni_careplan" />
        <field name="global" eval="True" />
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record id="careplan_activity_company_rule" model="ir.rule">
        <field name="name">Careplan/Activity: multi-company</field>
        <field name="model_id" ref="nirun_careplan.model_ni_careplan_activity" />
        <field name="global" eval="True" />
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record id="careplan_template_company_rule" model="ir.rule">
        <field name="name">Careplan/Template: multi-company</field>
        <field name="model_id" ref="nirun_careplan.model_ni_careplan_template" />
        <field name="global" eval="True" />
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
    <record id="careplan_template_goal_company_rule" model="ir.rule">
        <field name="name">Careplan/Template/Goal: multi-company</field>
        <field name="model_id" ref="nirun_careplan.model_ni_careplan_template_goal" />
        <field name="global" eval="True" />
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
    <record id="careplan_template_activity_company_rule" model="ir.rule">
        <field name="name">Careplan/Template/Activity: multi-company</field>
        <field name="model_id" ref="nirun_careplan.model_ni_careplan_template_activity" />
        <field name="global" eval="True" />
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>
    <record id="careplan_activity_code_user_cwu_rule" model="ir.rule">
        <field name="name">Careplan/Activity/Code: User create/write own only</field>
        <field name="model_id" ref="nirun_careplan.model_ni_careplan_activity_code" />
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_user'))]" />
        <field name="perm_unlink" eval="1" />
        <field name="perm_write" eval="1" />
        <field name="perm_read" eval="0" />
        <field name="perm_create" eval="1" />
    </record>
    <record id="goal_careplan_activity_code_read_rule" model="ir.rule">
        <field name="name">Careplan/Activity/Code: User read all</field>
        <field name="model_id" ref="nirun_careplan.model_ni_careplan_activity_code" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_user'))]" />
        <field name="perm_unlink" eval="0" />
        <field name="perm_write" eval="0" />
        <field name="perm_read" eval="1" />
        <field name="perm_create" eval="0" />
    </record>
</odoo>
