<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="careplan_activity_state_wizard_action_server" model="ir.actions.server">
        <field name="name">Update State</field>
        <field name="model_id" ref="model_ni_careplan_activity" />
        <field name="binding_model_id" ref="model_ni_careplan_activity" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.open_state_change_wizard()</field>
    </record>
    <record id="careplan_activity_state_wizard_action" model="ir.actions.act_window">
        <field name="name">Update State</field>
        <field name="res_model">ni.careplan.activity.state.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="careplan_activity_state_wizard_view_form" model="ir.ui.view">
        <field name="name">careplan.activity.state.wizard.view.form</field>
        <field name="model">ni.careplan.activity.state.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field
                        name="activity_ids"
                        options="{ 'color_field': 'color'}"
                        required="1"
                        widget="many2many_tags"
                    />
                    <field name="state" required="1" />
                </group>
                <footer>
                    <button name="change_state" string="Confirm" class="oe_highlight" type="object" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="careplan_activity_view_form_inherit" model="ir.ui.view">
        <field name="name">careplan.activity.view.form.inherit</field>
        <field name="model">ni.careplan.activity</field>
        <field name="inherit_id" ref="nirun_careplan.careplan_activity_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <button
                    name="open_state_change_wizard"
                    string="Update State"
                    attrs="{'invisible': [('active','=',False)]}"
                    class="oe_highlight"
                    type="object"
                />
            </xpath>
        </field>
    </record>
</odoo>
