<odoo>
    <record id="careplan_goal_action" model="ir.actions.act_window">
        <field name="name">Goal</field>
        <field name="res_model">ni.careplan.goal</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
    </record>
    <record id="careplan_goal_action_from_careplan" model="ir.actions.act_window">
        <field name="name">Goal</field>
        <field name="res_model">ni.careplan.goal</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
        <field name="context">
            {
                'pivot_row_groupby': ['priority'],
                'search_default_careplan_id': [active_id],
                'default_careplan_id': active_id,
            }
        </field>
    </record>
    <record id="careplan_goal_view_search" model="ir.ui.view">
        <field name="name">careplan.goal.view.search</field>
        <field name="model">ni.careplan.goal</field>
        <field name="arch" type="xml">
            <search>
                <field name="code_id" string="Goal" />
                <field
                    name="patient_id"
                    filter_domain="['|' ,('patient_id', 'ilike', self), ('encounter_id', 'ilike', self)]"
                />
                <field name="careplan_id" invisible="True" />
                <separator />
                <filter name="achieved" string="Achieved" domain="[('achieved', '=', True)]" />
                <separator />
                <filter name="priority" domain="[('priority', 'in', [1, 2, 3])]" string="Prioritized" />
                <separator />
                <group expand="0" string="Group By">
                    <filter
                        name="group_by_achievement"
                        string="Achievement Status"
                        context="{'group_by': 'achievement_id'}"
                    />
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}" />
                    <separator />
                    <filter name="group_by_priority" string="Priority" context="{'group_by': 'priority'}" />
                    <separator />
                    <filter name="group_by_careplan" string="Careplan" context="{'group_by': 'careplan_id'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="careplan_goal_view_form_quick_create" model="ir.ui.view">
        <field name="name">careplan.goal.view.form.quick.create</field>
        <field name="model">ni.careplan.goal</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="company_id" invisible="1" />
                    <field
                        name="careplan_id"
                        context="{'show_patient': True }"
                        invisible="context.get('default_careplan_id', False)"
                        options='{"always_reload": True}'
                    />
                    <field name="code_id" />
                </group>
            </form>
        </field>
    </record>
    <record id="careplan_goal_view_kanban" model="ir.ui.view">
        <field name="name">careplan.goal.view.kanban</field>
        <field name="model">ni.careplan.goal</field>
        <field name="arch" type="xml">
            <kanban
                class="o_kanban_project_tasks o_kanban_small_column"
                default_group_by="state"
                on_create="quick_create"
                quick_create_view="nirun_careplan.careplan_goal_view_form_quick_create"
            >
                <field name="id" />
                <field name="careplan_id" />
                <field name="code_id" />
                <field name="description" />
                <field name="patient_id" />
                <field name="priority" />
                <field name="color" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click o_has_icon">
                            <div class="o_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="code_id" />
                                        </strong>
                                        <br />
                                        <small class="text-muted">
                                            <span
                                                class="o-value"
                                                invisible="context.get('default_careplan_id', False) or context.get('fsm_mode', False)"
                                            >
                                                <field name="careplan_id" />
                                                <field name="patient_id" />
                                            </span>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_dropdown_kanban dropdown" groups="base.group_user" t-if="!selection_mode">
                                    <a
                                        aria-label="Dropdown menu"
                                        class="dropdown-toggle o-no-caret btn"
                                        data-display="static"
                                        data-toggle="dropdown"
                                        href="#"
                                        role="button"
                                        title="Dropdown menu"
                                    >
                                        <span class="fa fa-ellipsis-v" />
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a class="dropdown-item" role="menuitem" t-if="widget.editable" type="edit">
                                            Edit Goal
                                        </a>
                                        <a class="dropdown-item" role="menuitem" t-if="widget.deletable" type="delete">
                                            Delete
                                        </a>
                                        <div class="dropdown-divider" role="separator" />
                                        <ul class="oe_kanban_colorpicker" data-field="color" />
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <small>
                                        <field name="description" />
                                    </small>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left" t-if="!selection_mode">
                                        <field name="priority" widget="priority" />
                                    </div>
                                    <div class="oe_kanban_bottom_right" t-if="!selection_mode" />
                                </div>
                            </div>
                            <div class="oe_clear" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="careplan_goal_view_tree" model="ir.ui.view">
        <field name="name">careplan.goal.view.tree</field>
        <field name="model">ni.careplan.goal</field>
        <field name="arch" type="xml">
            <tree decoration-success="achieved == True">
                <field name="sequence" invisible="not context.get('seq_visible', False)" widget="handle" />
                <field name="careplan_id" invisible="context.get('default_careplan_id', False)" optional="show" />
                <field name="patient_id" invisible="context.get('default_careplan_id', False)" optional="show" />
                <field name="code_id" />
                <field name="description" optional="hide" />
                <field name="achievement_id" />
                <field name="state" optional="show" />
                <field name="company_id" groups="base.group_multi_company" optional="hide" />
                <field name="achieved" invisible="1" />
            </tree>
        </field>
    </record>
    <record id="careplan_goal_view_form" model="ir.ui.view">
        <field name="name">careplan.goal.view.form</field>
        <field name="model">ni.careplan.goal</field>
        <field name="arch" type="xml">
            <form class="o_form_project_tasks" string="Goal">
                <field name="patient_id" invisible="1" />
                <field name="encounter_id" invisible="1" />
                <field name="achieved" invisible="1" />
                <header>
                    <field name="state" statusbar_visible="proposed,active,completed" widget="statusbar" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box" groups="base.group_user" />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('achieved', '!=', True)]}"
                        bg_color="bg-success"
                        title="Achieved"
                    />
                    <div class="oe_title pr-0" style="max-width:85%;">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="code_id" class="o_task_name text-truncate w-100" placeholder="Goal..." />
                        </h1>
                        <field name="description" placeholder="Goal description in detail..." />
                    </div>
                    <group>
                        <group>
                            <field name="priority" widget="priority" />
                            <field name="achievement_id" attrs="{'invisible':[('state', '=', 'proposed')]}" />
                        </group>
                        <group>
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                invisible="context.get('default_careplan_id', False)"
                            />
                            <field
                                name="careplan_id"
                                context="{'show_patient': True}"
                                options='{"always_reload": True}'
                                invisible="context.get('default_careplan_id', False)"
                                domain="[('active', '=', True), ('company_id', '=', company_id)]"
                            />
                        </group>
                        <group>
                            <group name="target" />
                            <group name="result" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="careplan_goal_view_pivot" model="ir.ui.view">
        <field name="name">careplan.goal.view.pivot</field>
        <field name="model">ni.careplan.goal</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="code_id" type="row" />
                <field name="achievement_id" type="col" />
            </pivot>
        </field>
    </record>
    <record id="careplan_goal_view_graph" model="ir.ui.view">
        <field name="name">careplan.activity.view.graph</field>
        <field name="model">ni.careplan.goal</field>
        <field name="arch" type="xml">
            <graph>
                <field name="achievement_id" type="col" />
            </graph>
        </field>
    </record>
</odoo>
