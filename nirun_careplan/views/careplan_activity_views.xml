<odoo>
    <record id="careplan_activity_action" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">ni.careplan.activity</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
        <field name="context">{'hide_state': True}</field>
    </record>
    <record id="careplan_activity_action_my" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">ni.careplan.activity</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
        <field name="context">{'search_default_my_activity': True, 'hide_state': True}</field>
    </record>
    <record id="careplan_activity_action_from_careplan" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">ni.careplan.activity</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
        <field name="context">
            {
                'pivot_row_groupby': ['assignee_id'],
                'search_default_careplan_id': [active_id],
                'default_careplan_id': active_id,
                'hide_state': True,
            }
        </field>
    </record>
    <record id="careplan_activity_view_search" model="ir.ui.view">
        <field name="name">careplan_activity_view_search</field>
        <field name="model">ni.careplan.activity</field>
        <field name="arch" type="xml">
            <search>
                <field name="code_id" string="Activity" />
                <field
                    name="patient_id"
                    filter_domain="['|' ,('patient_id', 'ilike', self), ('encounter_id', 'ilike', self)]"
                />
                <field name="careplan_id" invisible="True" />
                <field name="assignee_id" />
                <separator />
                <filter name="my_activity" string="My Activity" domain="[('assignee_uid', '=', uid)]" />
                <filter name="unassigned" domain="[('assignee_id', '=', False)]" string="Unassigned" />
                <separator />
                <filter name="starred" domain="[('priority', 'in', [1, 2])]" string="Starred" />
                <separator />
                <group expand="0" string="Group By">
                    <filter name="group_by_careplan" string="Careplan" context="{'group_by': 'careplan_id'}" />
                    <filter name="group_by_category" string="Category" context="{'group_by': 'category_id'}" />
                    <separator />
                    <filter name="group_by_stage" string="Stage" context="{'group_by': 'state'}" />
                    <separator />
                    <filter name="group_by_assignee" string="Assigned to" context="{'group_by': 'assignee_id'}" />
                    <separator />
                    <filter name="group_by_create_date" string="Creation Date" context="{'group_by': 'create_date'}" />
                    <filter
                        name="group_by_company"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company"
                        string="Company"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="careplan_activity_view_form_quick_create" model="ir.ui.view">
        <field name="name">careplan.activity.view.form.quick.create</field>
        <field name="model">ni.careplan.activity</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="company_id" invisible="1" />
                    <field
                        name="careplan_id"
                        context="{'show_patient': True }"
                        invisible="context.get('default_careplan_id', False)"
                        options="{'always_reload': True, 'no_open': True,'no_create': True}"
                    />
                    <field name="code_id" string="Activity" options="{'no_open': True, 'no_create_edit': True}" />
                    <field name="assignee_id" options="{'no_open': True,'no_create': True}" />
                </group>
            </form>
        </field>
    </record>
    <record id="careplan_activity_view_kanban" model="ir.ui.view">
        <field name="name">careplan.activity.view.kanban</field>
        <field name="model">ni.careplan.activity</field>
        <field name="arch" type="xml">
            <kanban
                class="o_kanban_project_tasks o_kanban_small_column"
                default_group_by="state"
                on_create="quick_create"
                quick_create_view="nirun_careplan.careplan_activity_view_form_quick_create"
            >
                <field name="id" />
                <field name="careplan_id" />
                <field name="code_id" />
                <field name="display_name" />
                <field name="sequence" />
                <field name="description" />
                <field name="assignee_id" />
                <field name="manager_id" />
                <field name="state" options='{"group_by_tooltip": {"description": "Description"}}' />
                <field name="patient_id" />
                <field name="message_attachment_count" />
                <field name="message_needaction" />
                <field name="color" />
                <field name="kanban_state" />
                <progressbar
                    colors='{"done": "success", "blocked": "danger", "normal": "muted"}'
                    field="kanban_state"
                />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click o_has_icon">
                            <div class="o_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="display_name" />
                                        </strong>
                                        <br />
                                        <small class="text-muted">
                                            <t invisible="context.get('hide_state', False)">
                                                <span
                                                    class='badge badge-success'
                                                    t-esc="record.state.value"
                                                    t-if="record.state.raw_value == 'completed'"
                                                />
                                                <span
                                                    class='badge badge-danger'
                                                    t-esc="record.state.value"
                                                    t-if="record.state.raw_value == 'cancelled'"
                                                />
                                                <span
                                                    class='badge badge-primary'
                                                    t-esc="record.state.value"
                                                    t-if="record.state.raw_value == 'in-progress'"
                                                />
                                                <span
                                                    class="badge badge-dark"
                                                    t-esc="record.state.value"
                                                    t-if="record.state.raw_value == 'scheduled'"
                                                />
                                            </t>
                                            <span
                                                class="o-value"
                                                invisible="context.get('default_careplan_id', False) or context.get('fsm_mode', False)"
                                            >
                                                <field name="careplan_id" />
                                                <field name="patient_id" />
                                            </span>
                                        </small>
                                        <small>
                                            <field name="category_id" />
                                        </small>
                                    </div>
                                </div>
                                <div class="o_dropdown_kanban dropdown" groups="base.group_user" t-if="!selection_mode">
                                    <a
                                        aria-label="Dropdown menu"
                                        class="dropdown-toggle o-no-caret btn"
                                        data-display="static"
                                        data-toggle="dropdown"
                                        href="#"
                                        role="button"
                                        title="Dropdown menu"
                                    >
                                        <span class="fa fa-ellipsis-v" />
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a class="dropdown-item" role="menuitem" t-if="widget.editable" type="edit">
                                            Edit Activity
                                        </a>
                                        <a class="dropdown-item" role="menuitem" t-if="widget.deletable" type="delete">
                                            Delete
                                        </a>
                                        <div class="dropdown-divider" role="separator" />
                                        <ul class="oe_kanban_colorpicker" data-field="color" />
                                    </div>
                                </div>
                                <div class="o_kanban_record_body" />
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left" t-if="!selection_mode">
                                        <field name="priority" widget="priority" />
                                        <field name="activity_ids" widget="kanban_activity" />
                                    </div>
                                    <div class="oe_kanban_bottom_right" t-if="!selection_mode">
                                        <field
                                            name="kanban_state"
                                            groups="base.group_user"
                                            invisible="context.get('fsm_mode', False)"
                                            widget="state_selection"
                                        />
                                        <img
                                            class="oe_kanban_avatar"
                                            t-att-alt="record.assignee_id.value"
                                            t-att-src="kanban_image('hr.employee', 'image_128', record.assignee_id.raw_value)"
                                            t-att-title="record.assignee_id.value"
                                        />
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="careplan_activity_view_tree" model="ir.ui.view">
        <field name="name">careplan.activity.view.tree</field>
        <field name="model">ni.careplan.activity</field>
        <field name="arch" type="xml">
            <tree
                decoration-success="state == 'completed'"
                decoration-muted="state == 'cancelled'"
                decoration-bf="state == 'scheduled'"
                expand="True"
            >
                <field name="sequence" widget="handle" />
                <field name="patient_id" invisible="context.get('default_patient_id', False)" optional="show" />
                <field
                    name="careplan_id"
                    invisible="context.get('default_careplan_id', False) or context.get('default_patient_id', False)"
                    optional="hide"
                />
                <field name="display_name" />
                <field name="category_id" optional="hide" />
                <field name="timing_id" />
                <field name="period_start" optional="hide" />
                <field name="period_end" optional="hide" />
                <field name="assignee_id" optional="hide" />
                <field name="state" optional="show" />
                <field name="kanban_state" optional="hide" />
                <field name="activity_exception_decoration" widget="activity_exception" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    invisible="context.get('default_patient_id')"
                />
                <button
                    name="action_complete"
                    class="text-success"
                    type="object"
                    string="Complete"
                    icon="fa-check"
                    attrs="{'invisible': [('state', 'in', ['scheduled', 'completed', 'cancelled'])], 'column_invisible': [('parent.state', 'not in', ['active'])]}"
                />
                <button
                    name="action_cancel"
                    class="text-danger"
                    type="object"
                    string="Cancel"
                    icon="fa-ban"
                    confirm="Are you sure to cancel this activity?"
                    attrs="{'invisible': [('state', 'in', ['scheduled', 'completed', 'cancelled'])], 'column_invisible': [('parent.state', 'not in', ['active'])]}"
                />
                <control>
                    <create string="Add Activity" context="{'dummy': True}" />
                    <create string="Add Service" context="{'default_kind': 'ni.service.request'}" />
                </control>
            </tree>
        </field>
    </record>
    <record id="careplan_activity_view_form" model="ir.ui.view">
        <field name="name">careplan.activity.view.form</field>
        <field name="model">ni.careplan.activity</field>
        <field name="arch" type="xml">
            <form>
                <field name="active" invisible="1" />
                <field name="patient_id" invisible="1" />
                <field name="encounter_id" invisible="1" />
                <header invisible="context.get('no_header')">
                    <button
                        name="action_complete"
                        class="btn-primary"
                        type="object"
                        string="Complete"
                        icon="fa-check"
                        attrs="{'invisible': [('state', 'in', ['scheduled', 'completed', 'cancelled'])]}"
                    />
                    <button
                        name="action_cancel"
                        class="btn-secondary"
                        type="object"
                        string="Cancel"
                        confirm="Are you sure to cancel this activity?"
                        attrs="{'invisible': [('state', 'in', ['scheduled', 'completed', 'cancelled'])]}"
                    />
                    <field
                        name="state"
                        statusbar_visible="scheduled,in-progress,completed"
                        widget="statusbar"
                        attrs="{'invisible': [('id', '=', False)]}"
                    />
                </header>
                <sheet>
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [(('state', '!=', 'cancelled'))]}"
                        bg_color="bg-danger"
                        title="Cancelled"
                    />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('state', '!=', 'completed')]}"
                        bg_color="bg-success"
                        title="Completed"
                    />
                    <div class="oe_title pr-0">
                        <field
                            name="kind"
                            widget="radio"
                            options="{'horizontal': True}"
                            class="oe_edit_only"
                            attrs="{'readonly': [('id', '!=', False)]}"
                        />
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="priority" class="mr-3" widget="priority" invisible="1" />
                            <field
                                name="code_id"
                                class="o_task_name text-truncate w-100"
                                placeholder="Activity..."
                                attrs="{'invisible': [('kind', '!=', 'ni.careplan.activity.code')], 'required':[('kind', '=', 'ni.careplan.activity.code')]}"
                            />
                            <field
                                name="service_id"
                                class="o_task_name text-truncate w-100"
                                placeholder="Service"
                                options="{'no_create_edit': True}"
                                attrs="{'invisible': [('kind', '!=', 'ni.service.request')], 'required':[('kind', '=', 'ni.service.request')]}"
                            />
                            <field name="kanban_state" class="ml-auto oe_read_only" widget="state_selection" />
                        </h1>
                    </div>
                    <field name="category_id" placeholder="Category" invisible="1" />
                    <group>
                        <group>
                            <field
                                name="service_request_id"
                                placeholder="Request..."
                                context="{'default_patient_id': id, 'default_encounter_id': encounter_id, 'default_service_id': service_id, 'default_period_start': period_start,'show_state':True}"
                                attrs="{'invisible': [('kind', '!=', 'ni.service.request')], 'required':[('kind', '=', 'ni.service.request')]}"
                            />
                            <field
                                name="careplan_id"
                                context="{'show_patient': True}"
                                options='{"always_reload": True}'
                                invisible="context.get('default_careplan_id') or context.get('default_patient_id')"
                            />
                            <field name="manager_id" invisible="context.get('default_careplan_id')" />
                            <field name="assignee_id" />
                        </group>
                        <group>
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                invisible="context.get('default_careplan_id')"
                            />
                            <label for="period_start" string="Period" />
                            <div class="o_row">
                                <field name="period_start" placeholder="Start" />
                                <label
                                    for="period_end"
                                    string="-"
                                    class="oe_read_only"
                                    attrs="{'invisible':[('period_end', '=', False)]}"
                                />
                                <field name="period_end" placeholder="End" />
                            </div>
                            <label for="timing_id" />
                            <div class="o_row">
                                <field
                                    name="timing_tmpl_id"
                                    options="{'no_create':True, 'no_create_edit':True}"
                                    attrs="{'invisible': [('timing_id', '!=', False)], 'required':[('timing_id', '=', False)]}"
                                    placeholder="choose from..."
                                />
                                <span
                                    class="oe_edit_only"
                                    attrs="{'invisible': ['|', ('timing_id', '!=', False), ('timing_tmpl_id','!=', False)]}"
                                >
                                    or
                                </span>
                                <field
                                    name="timing_id"
                                    domain="[('id', '=', False)]"
                                    options="{'no_quick_create':True}"
                                    attrs="{'invisible': [('timing_tmpl_id', '!=', False)], 'required':[('timing_tmpl_id', '=', False)]}"
                                    placeholder="create new..."
                                />
                            </div>
                        </group>
                        <p class="text-muted oe_edit_only">
                            Add a description to help your coworkers understand the meaning and purpose of the
                            stage.
                        </p>
                        <field name="description" nolabel="1" placeholder="Add a description..." />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="careplan_activity_view_pivot" model="ir.ui.view">
        <field name="name">careplan.activity.view.pivot</field>
        <field name="model">ni.careplan.activity</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="assignee_id" type="row" />
                <field name="state" type="col" />
                <field name="kanban_state" type="col" />
            </pivot>
        </field>
    </record>
    <record id="careplan_activity_view_graph" model="ir.ui.view">
        <field name="name">careplan.activity.view.graph</field>
        <field name="model">ni.careplan.activity</field>
        <field name="arch" type="xml">
            <graph>
                <field name="assignee_id" type="col" />
                <field name="state" type="col" />
            </graph>
        </field>
    </record>
    <record id="careplan_activity_action_category_graph" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">ni.careplan.activity</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
        <field name="view_id" ref="careplan_activity_view_graph" />
        <field name="context">
            {
                'search_default_group_by_category': True,
                'search_default_careplan_id': active_id,
                'default_careplan_id': active_id,
                'graph_mode': 'pie',
            }
        </field>
    </record>
</odoo>
