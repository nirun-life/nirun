<odoo>
    <record id="careplan_action" model="ir.actions.act_window">
        <field name="name">Care Plans</field>
        <field name="res_model">ni.careplan</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
    </record>
    <record id="careplan_view_search" model="ir.ui.view">
        <field name="name">careplan.view.search</field>
        <field name="model">ni.careplan</field>
        <field name="arch" type="xml">
            <search>
                <field name="patient_id" />
                <separator />
                <filter name="inactive" domain="[('active', '=', False)]" string="Archived" />
                <separator />
                <group expand="1" string="Group By">
                    <filter name="group_by_patient" string="Patient" context="{'group_by': 'patient_id'}" />
                    <filter name="group_by_manager" string="Care Manager" context="{'group_by': 'manager_id'}" />
                    <filter name="group_by_author" string="Author" context="{'group_by': 'author_id'}" />
                    <separator />
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="careplan_view_form" model="ir.ui.view">
        <field name="name">careplan.view.form</field>
        <field name="model">ni.careplan</field>
        <field name="arch" type="xml">
            <form>
                <field name="active" invisible="1" />
                <field name="id" invisible="1" />
                <header>
                    <button
                        name="action_confirm"
                        attrs="{'invisible': [('state', 'not in', ['draft'])]}"
                        class="btn-primary"
                        string="Confirm"
                        type="object"
                        confirm="Are you sure you want to confirm this? Some field will not able to edit after confirmed"
                        groups="nirun_careplan.group_manager"
                    />
                    <button
                        name="action_close"
                        attrs="{'invisible': [('state', 'not in', ['active'])]}"
                        class="oe_highlight"
                        string="Complete"
                        icon="fa-check-circle"
                        confirm="Are you sure you want to close this?"
                        type="object"
                        groups="nirun_careplan.group_manager"
                    />
                    <button
                        name="action_hold_on"
                        attrs="{'invisible': [('state', 'not in', ['active'])]}"
                        string="Hold on"
                        confirm="Are you sure you want to hold this?"
                        type="object"
                        groups="nirun_careplan.group_manager"
                    />
                    <button
                        name="action_resume"
                        attrs="{'invisible': [('state', 'not in', ['on-hold'])]}"
                        string="Resume"
                        class="btn-primary"
                        confirm="Are you sure you want to resume this?"
                        type="object"
                        icon="fa-play-circle"
                        groups="nirun_careplan.group_manager"
                    />
                    <button
                        name="action_revoked"
                        attrs="{'invisible': [('state', 'not in', ['active'])]}"
                        string="Revoke"
                        confirm="Are you sure you want to revoke this?"
                        type="object"
                        groups="nirun_careplan.group_manager"
                    />
                    <field name="state" statusbar_visible="draft,active,completed" widget="statusbar" />
                </header>
                <sheet string="Careplan">
                    <div name="button_box" class="oe_button_box" groups="base.group_user">
                        <button
                            name="%(careplan_goal_action_from_careplan)d"
                            class="oe_stat_button"
                            icon="fa-flag"
                            type="action"
                        >
                            <field name="goal_count" string="Goals" widget="statinfo" />
                        </button>
                        <button
                            name="%(careplan_activity_action_from_careplan)d"
                            class="oe_stat_button"
                            icon="fa-tasks"
                            type="action"
                        >
                            <field name="activity_count" string="Activities" widget="statinfo" />
                        </button>
                    </div>
                    <field name="patient_avatar" class="oe_avatar" widget='image' />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('active', '=', True)]}"
                        bg_color="bg-danger"
                        title="Archived"
                    />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('state', '!=', 'revoked')]}"
                        bg_color="bg-danger"
                        title="Revoked"
                    />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('state', '!=', 'on-hold')]}"
                        bg_color="bg-warning"
                        title="On-Hold"
                    />
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('state', '!=', 'completed')]}"
                        bg_color="bg-success"
                        title="Completed"
                    />
                    <div class="oe_title">
                        <label for="patient_id" string="Care plan for" />
                        <h1>
                            <field name="patient_id" class="w-90" placeholder="Patient" />
                        </h1>
                        <label
                            for="encounter_id"
                            class="oe_read_only mr-1"
                            attrs="{'invisible': [('encounter_id', '=', False)]}"
                        />
                        <field name="encounter_id" placeholder="Encounter No." />
                    </div>
                    <group>
                        <group>
                            <field name="intent" />
                            <field name="author_id" />
                            <field
                                name="contributor_ids"
                                options="{'color_field': 'color', 'no_create_edit': True}"
                                widget="many2many_tags"
                            />
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" />
                            <label for="period_start" string="Period" />
                            <div class="o_row">
                                <field name="period_start" placeholder="Start" />
                                <label
                                    for="period_end"
                                    string="-"
                                    class="oe_read_only"
                                    attrs="{'invisible':[('period_end', '=', False)]}"
                                />
                                <field name="period_end" placeholder="End" />
                            </div>
                            <field name="template_id" attrs="{'invisible': [('state', '!=', 'draft')]}" />
                        </group>
                    </group>
                    <group name="problem" string="Problem">
                        <field
                            name="condition_ids"
                            context="{'default_patient_id': patient_id, 'default_encounter_id': encounter_id, 'default_category': 'problem-list-item'}"
                            domain="[('patient_id', '=', patient_id), ('state', 'in', ['active', 'remission'])]"
                            nolabel="1"
                        >
                            <tree editable="bottom" edit="0">
                                <field name="code_id" readonly="1" />
                                <field name="type_id" readonly="1" optional="show" />
                                <field name="severity" readonly="1" optional="hide" />
                                <field name="period_start" readonly="1" optional="hide" />
                                <field name="period_end" readonly="1" optional="hide" />
                                <field name="note" />
                                <button
                                    name="action_edit"
                                    attrs="{'column_invisible': [('parent.id', '=', False)]}"
                                    icon="fa-pencil-square-o"
                                    type="object"
                                />
                            </tree>
                        </field>
                    </group>
                    <separator string="Goal" />
                    <field
                        name="goal_ids"
                        mode="tree"
                        context="{'default_careplan_id': id, 'default_patient_id': patient_id}"
                        nolabel="1"
                    >
                        <tree editable="bottom if state == 'draft' else False">
                            <field name="sequence" widget="handle" class="oe_edit_only" />
                            <field name="patient_id" invisible="1" />
                            <field name="encounter_id" invisible="1" />
                            <field
                                name="condition_id"
                                domain="[('id', 'in', parent.condition_ids)]"
                                optional="hide"
                                options="{'no_create': True}"
                            />
                            <field name="code_id" width="3" options="{'no_create_edit': True}" />
                            <field name="priority" widget="priority" optional="hide" />
                            <field
                                name="achievement_id"
                                attrs="{'column_invisible': [('parent.state', '=', 'draft')]}"
                                options="{'no_create': True}"
                            />
                            <field
                                name="state"
                                attrs="{'column_invisible': [('parent.state', '=', 'draft')]}"
                                optional="hide"
                            />
                        </tree>
                    </field>
                    <separator string="Activity" />
                    <field
                        name="activity_ids"
                        context="{'default_careplan_id': id, 'default_period_start': period_start, 'default_period_end': period_end}"
                        mode="tree"
                        nolabel="1"
                    >
                        <tree editable="bottom">
                            <field name="sequence" widget="handle" class="oe_edit_only" />
                            <field name="careplan_id" invisible="1" />
                            <field name="company_id" invisible="1" />
                            <field
                                name="goal_id"
                                optional="hide"
                                domain="[('id', 'in', parent.goal_ids)]"
                                options="{'no_create': True}"
                            />
                            <field name="code_id" width="3" options="{'no_create_edit': True}" />
                            <field name="category_id" optional="hide" />
                            <field
                                name="timing_id"
                                context="{'form_view_ref': 'nirun.timing_view_form_quick'}"
                                domain="[('id', '=', False)]"
                                options="{'no_quick_create':True}"
                            />
                            <field name="timing_tmpl_id" invisible="1" />
                            <field name="assignee_id" />
                            <field
                                name="state"
                                attrs="{'column_invisible': [('parent.state', '=', 'draft')]}"
                                optional="hide"
                            />
                        </tree>
                    </field>
                    <div class="o_row">
                        <button
                            name="%(careplan_activity_action_category_graph)d"
                            attrs="{'invisible': [('activity_count', '=', 0)]}"
                            class="oe_read_only"
                            icon="fa-pie-chart"
                            type="action"
                        />
                    </div>
                    <separator string="Result" />
                    <i class="text-muted" attrs="{'invisible': [('state','=', 'completed')]}">
                        Achievement of careplan can record when careplan is completed
                    </i>
                    <group name="result" colspan="10">
                        <field
                            name="achievement_id"
                            domain="[('goal_state', '=', 'completed')]"
                            options="{'no_create': True }"
                        />
                        <field name="achievement_note" string="" placeholder="Note..." />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="careplan_view_tree" model="ir.ui.view">
        <field name="name">careplan.view.tree</field>
        <field name="model">ni.careplan</field>
        <field name="arch" type="xml">
            <tree
                decoration-bf="state in ['draft']"
                decoration-muted="active == False or state == 'revoked'"
                decoration-success="state in ['completed']"
                decoration-warning="state in ['on-hold']"
            >
                <field name="sequence" widget="handle" />
                <field name="active" invisible="1" />
                <field name="name" optional="show" />
                <field name="description" optional="hide" />
                <field name="patient_id" />
                <field name="category_ids" optional="show" options="{'color_field': 'color'}" widget="many2many_tags" />
                <field name="manager_id" />
                <field name="author_id" optional="hide" />
                <field name="period_start" optional="show" />
                <field name="period_end" optional="hide" />
                <field name="duration" optional="hide" />
                <field name="goal_count" />
                <field name="goal_achieved" widget="progressbar" />
                <field name="state" string="Status" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>
    <record id="careplan_view_kanban" model="ir.ui.view">
        <field name="name">project.project.kanban</field>
        <field name="model">ni.careplan</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard o_emphasize_colors">
                <field name="id" />
                <field name="name" />
                <field name="description" />
                <field name="patient_id" />
                <field name="manager_id" />
                <field name="activity_count" />
                <field name="goal_count" />
                <field name="goal_achieved_count" />
                <field name="state" />
                <field name="period_start" />
                <field name="period_end" />
                <field name="color" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click o_has_icon">
                            <div class="o_project_kanban_main">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_primary">
                                            <span t-if="record.patient_id.value">
                                                <strong>
                                                    <t t-esc="record.patient_id.value" />
                                                </strong>
                                                <span
                                                    class='badge badge-success'
                                                    t-esc="record.state.value"
                                                    t-if="record.state.raw_value == 'completed'"
                                                />
                                                <span
                                                    class='badge badge-danger'
                                                    t-esc="record.state.value"
                                                    t-if="record.state.raw_value == 'revoked'"
                                                />
                                                <span
                                                    class='badge badge-warning'
                                                    t-esc="record.state.value"
                                                    t-if="record.state.raw_value == 'on-hold'"
                                                />
                                                <span
                                                    class='badge badge-primary'
                                                    t-esc="record.state.value"
                                                    t-if="record.state.raw_value == 'active'"
                                                />
                                                <span
                                                    class='badge badge-info'
                                                    t-esc="record.state.value"
                                                    t-if="record.state.raw_value == 'draft'"
                                                />
                                            </span>
                                            <span>
                                                <small class="text-muted">
                                                    <span t-esc="record.name.value" class="mr-1" />
                                                    <span>
                                                        <i
                                                            aria-label="period"
                                                            class="fa fa-calendar"
                                                            role="img"
                                                            title="Period"
                                                        />
                                                        <t t-esc="record.period_start.value" />
                                                        <t t-if="record.period_end.value">
                                                            -
                                                            <t t-esc="record.period_end.value" />
                                                        </t>
                                                    </span>
                                                </small>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <div class="o_kanban_card_manage_section o_kanban_manage_reports">
                                        <div role="menuitem">
                                            <a type="edit">Edit</a>
                                        </div>
                                    </div>
                                    <div aria-haspopup="true" class="o_no_padding_kanban_colorpicker" role="menuitem">
                                        <ul class="oe_kanban_colorpicker" data-field="color" role="popup" />
                                    </div>
                                </div>
                                <a class="o_kanban_manage_toggle_button o_left" href="#">
                                    <i aria-label="Manage" class="fa fa-ellipsis-v" role="img" title="Manage" />
                                </a>
                            </div>
                            <div class="o_project_kanban_boxes">
                                <a
                                    name="%(careplan_goal_action_from_careplan)d"
                                    class="o_project_kanban_box"
                                    type="action"
                                >
                                    <div>
                                        <span class="o_value">
                                            <i aria-label="Goal" class="fa fa-flag" role="img" title="Goal" />
                                            <t t-esc="record.goal_achieved_count.value" />
                                            <i>/</i>
                                            <t t-esc="record.goal_count.value" />
                                        </span>
                                        <span class="o_label">Goals</span>
                                    </div>
                                </a>
                                <a
                                    name="%(careplan_activity_action_from_careplan)d"
                                    class="o_project_kanban_box"
                                    type="action"
                                >
                                    <div>
                                        <span class="o_value">
                                            <i aria-label="Activity" class="fa fa-tasks" role="img" title="Activity" />
                                            <t t-esc="record.activity_count.value" />
                                        </span>
                                        <span class="o_label">Activities</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="careplan_view_pivot" model="ir.ui.view">
        <field name="name">careplan.view.pivot</field>
        <field name="model">ni.careplan</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="manager_id" type="row" />
                <field name="state" type="col" />
            </pivot>
        </field>
    </record>
    <record id="careplan_view_graph" model="ir.ui.view">
        <field name="name">careplan.view.graph</field>
        <field name="model">ni.careplan</field>
        <field name="arch" type="xml">
            <graph>
                <field name="manager_id" type="col" />
                <field name="state" type="col" />
            </graph>
        </field>
    </record>
</odoo>
