<odoo>
    <record id="patient_view_form_inherit" model="ir.ui.view">
        <field name="name">patient.view.form.inherit</field>
        <field name="model">ni.patient</field>
        <field name="inherit_id" ref="nirun_patient.patient_view_form" />
        <field name="groups_id" eval="[(4, ref('nirun_careplan.group_user'))]" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <!--                <button name="%(create_careplan_action)d" class="oe_stat_button" icon="fa-book" type="action"-->
                <button
                    name="create_careplan"
                    attrs="{'invisible': [('careplan_count', '!=', 0)]}"
                    class="oe_stat_button"
                    icon="fa-book"
                    type="object"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Create</span>
                        <span class="o_stat_text">Careplan</span>
                    </div>
                </button>
                <button
                    name="open_careplan"
                    attrs="{'invisible': [('careplan_count', '=', 0)]}"
                    class="oe_stat_button"
                    icon="fa-book"
                    type="object"
                >
                    <field name="careplan_count" string="Careplan" widget="statinfo" />
                </button>
                <button
                    name="open_careplan_activity"
                    attrs="{'invisible': [('careplan_activity_count', '=', 0)]}"
                    class="oe_stat_button"
                    icon="fa-tasks"
                    type="object"
                >
                    <field name="careplan_activity_count" string="Activities" widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
