<odoo>
    <record id="encounter_ob_line_action" model="ir.actions.act_window">
        <field name="name">Observation Detail</field>
        <field name="res_model">ni.encounter.observation</field>
        <field name="view_mode">tree</field>
    </record>
    <record id="encounter_ob_line_view_search" model="ir.ui.view">
        <field name="name">encounter.ob.line.view.search</field>
        <field name="model">ni.encounter.observation</field>
        <field name="arch" type="xml">
            <search>
                <field name="sheet_id" />
                <field name="patient_id" />
                <field name="type_id" />
                <field name="interpretation_id" operator="child_of" />
                <filter
                    name="effective_today"
                    string="Today"
                    domain="[
                    ('effective_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                    ('effective_date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))
                    ]"
                />
                <filter
                    name="effective_yesterday"
                    string="Yesterday"
                    domain="[
                    ('effective_date', '&gt;=', (datetime.datetime.now()-datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')),
                    ('effective_date', '&lt;=',(datetime.datetime.now()-datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:23:59'))
                    ]"
                />
                <filter name="effective_date" string="Period" date="effective_date" />
                <separator />
                <group string="Group By">
                    <filter name="Patient" context="{'group_by': 'patient_id'}" />
                    <filter name="Encounter" context="{'group_by': 'encounter_id'}" />
                    <separator />
                    <filter name="Task" context="{'group_by': 'sheet_id'}" />
                    <filter name="Type" context="{'group_by': 'type_id'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="encounter_ob_line_view_tree" model="ir.ui.view">
        <field name="name">encounter.ob.line.view.tree</field>
        <field name="model">ni.encounter.observation</field>
        <field name="arch" type="xml">
            <tree
                decoration-danger="display_class == 'danger'"
                decoration-info="display_class == 'info'"
                decoration-muted="display_class == 'muted'"
                decoration-primary="display_class == 'primary'"
                decoration-success="display_class == 'success'"
                decoration-warning="display_class == 'warning'"
                editable="bottom"
                default_order="sequence,type_id"
            >
                <field name="sequence" widget="handle" />
                <field name="effective_date" optional="hide" />
                <field name="type_id" optional="show" />
                <field name="category_id" optional="hide" />
                <field name="value" />
                <field name="unit" />
                <field name="interpretation_id" />
                <field name="display_class" invisible="1" />
                <button name="action_graph_view" string="View Graph" icon="fa-bar-chart" type="object" />
            </tree>
        </field>
    </record>
    <record id="encounter_ob_line_view_form" model="ir.ui.view">
        <field name="name">encounter.ob.line.view.form</field>
        <field name="model">ni.encounter.observation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sheet_id" />
                        <field name="patient_id" />
                        <group>
                            <field name="type_id" widget="radio" />
                        </group>
                        <group>
                            <field name="value" />
                            <field name="unit" />
                            <field name="interpretation_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
