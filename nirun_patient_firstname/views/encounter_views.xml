<odoo>
    <record id="encounter_view_form_inherit" model="ir.ui.view">
        <field name="name">encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_patient.encounter_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='patient_name']" position="attributes">
                <attribute name="readonly">True</attribute>
                <attribute name="required">False</attribute>
                <attribute name="invisible">True</attribute>
            </xpath>
            <field name="patient_name" position="after">
                <div class="o_row" attrs="{'invisible': [('id', '=', False)]}">
                    <field
                        class="oe_edit_only"
                        name="lastname"
                        attrs="{'required': [('firstname', '=', False)]}"
                        placeholder="Last name"
                    />
                    <field
                        class="oe_edit_only"
                        name="firstname"
                        attrs="{'required': [('lastname', '=', False)]}"
                        placeholder="Name"
                    />
                </div>
            </field>
        </field>
    </record>
</odoo>
