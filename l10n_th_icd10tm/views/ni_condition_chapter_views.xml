<odoo>
    <!-- This file only intent use as scaffold for coding model -->
    <record id="ni_condition_chapter_action" model="ir.actions.act_window">
        <field name="name">Chapter</field>
        <field name="res_model">ni.condition.chapter</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="ni_condition_chapter_view_search" model="ir.ui.view">
        <field name="name">ni.condition.chapter.view.search</field>
        <field name="model">ni.condition.chapter</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|' ,('name', 'ilike', self), ('code', 'ilike', self)]" />
                <filter name="inactive" string="Archived" domain="[('active', '=', False)]" />
                <group name="group_by" string="Group By">
                    <filter name="system" string="System" context="{'group_by': 'system_id'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="ni_condition_chapter_view_tree" model="ir.ui.view">
        <field name="name">ni.condition.chapter.view.tree</field>
        <field name="model">ni.condition.chapter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="roman" string="Chapter" />
                <field name="name" />
                <field name="code" optional="show" />
                <field name="system_id" optional="show" />
                <field name="color" optional="hide" widget="color_picker" />
                <field name="active" optional="hide" />
            </tree>
        </field>
    </record>
    <record id="ni_condition_chapter_view_form" model="ir.ui.view">
        <field name="name">ni.condition.chapter.view.form</field>
        <field name="model">ni.condition.chapter</field>
        <field name="arch" type="xml">
            <form>
                <field name="id" invisible="True" />
                <field name="active" invisible="True" />
                <sheet>
                    <widget
                        name="web_ribbon"
                        attrs="{'invisible': [('active', '=', True)]}"
                        bg_color="bg-danger"
                        title="Archived"
                    />
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="system_id" />
                            <field name="code" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Block">
                            <field name="block_ids" />
                        </page>
                        <page string="Definition">
                            <field name="definition" />
                        </page>
                        <page string="Extra Info" groups="base.group_no_one">
                            <group>
                                <group>
                                    <field name="color" widget="color_picker" />
                                    <field name="sequence" />
                                </group>
                                <group>
                                    <field name="create_date" />
                                    <field name="create_uid" />
                                    <field name="write_date" />
                                    <field name="write_uid" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem
        id="condition_chapter_menu"
        name="Chapter"
        parent="ni_condition.ni_condition_menu_section"
        action="ni_condition_chapter_action"
    />
</odoo>
