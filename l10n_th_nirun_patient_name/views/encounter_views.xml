<odoo>
    <record id="encounter_view_form_inherit" model="ir.ui.view">
        <field name="name">encounter.view.form.inherit</field>
        <field name="model">ni.encounter</field>
        <field name="inherit_id" ref="nirun_patient_firstname.encounter_view_form_inherit" />
        <field name="arch" type="xml">
            <field name="lastname" position="before">
                <field class="oe_edit_only" name="title" options="{'no_open': True}" placeholder="Title" />
            </field>
            <!-- swap firstname and lastname position -->
            <field name="firstname" position="after">
                <field name="lastname" position="move" />
            </field>
        </field>
    </record>
</odoo>
